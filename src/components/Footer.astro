            <!-- Columna 1: Capacidades -->
            <div class="space-y-4">
                <h4 class="font-bold text-lg">Capacidades</h4>
                <ul class="space-y-2 font-light">
                    <li><a href="#" class="hover:underline">Competitividad</a></li>
                    <li><a href="#" class="hover:underline">Desarrollo</a></li>
                    <li><a href="#" class="hover:underline">Planeamiento</a></li>
