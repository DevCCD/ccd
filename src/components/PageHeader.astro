---
export interface Props {
  title: string;
  description?: string;
  backgroundImage?: string;
}

const { title, description, backgroundImage } = Astro.props;
---


<section class={`relative w-full pt-40 pb-24 px-6 ${!backgroundImage ? 'bg-gradient-to-b from-white to-[#EAF4FF]' : ''}`}>
  
  <!-- IMAGEN DE FONDO (Solo si se provee) -->
  {backgroundImage && (
    <div class="absolute inset-0 z-0">
        <!-- Imagen -->
        <img src={backgroundImage} alt={title} class="w-full h-full object-cover" />
        <!-- Capa oscura (Overlay) para que el texto se lea -->
        <div class="absolute inset-0 bg-black/60"></div>
    </div>
  )}

  <!-- CONTENIDO -->
  <div class="container mx-auto max-w-5xl text-center relative z-10">
    
    <!-- TÃ­tulo: Si hay imagen de fondo, texto blanco. Si no, texto oscuro. -->
    <h1 class={`font-serif text-5xl md:text-7xl font-black mb-6 ${backgroundImage ? 'text-white' : 'text-gray-900'}`}>
      {title}
    </h1>

    {description && (
      <p class={`font-sans text-xl md:text-2xl leading-relaxed max-w-4xl mx-auto ${backgroundImage ? 'text-gray-100' : 'text-gray-700'}`}>
        {description}
      </p>
    )}
    
  </div>
</section>