---
import Layout from "../../layouts/Layout.astro";
import PageHeader from "../../components/PageHeader.astro";
import ValueGenerationHero from "../../components/capacidades/ValueGenerationHero.astro";
import BentoGrid from "../../components/capacidades/BentoGrid.astro";
import CapabilitySidebar from "../../components/capacidades/CapabilitySidebar.astro";

// Importamos nuestra "base de datos"
import { teamMembers, industriesData } from "../../data/teamData";

const selectedSpecialists = [
    teamMembers["alvaro-gordillo"],
    teamMembers["rudy-laguna"],
];

const selectedIndustries = [
    industriesData["infraestructura"],
    industriesData["agricultura"],
];

// Bento Grid Items for Generación de Valor Cliente
const valueGenerationItems = [
    {
        text: "Visión de prosperidad multi regional, provincial, distrital y comunitaria que genera sinergias y complementariedad entre los proyectos públicos y privados.",
        image: "/capacidades/corredores/aerial-view-pastoruri-glacier-ancash-peru.jpg",
        imageAlt: "Visión de Prosperidad",
        size: "large" as const,
    },
    {
        text: "Mayor movilidad y oportunidades de educación, salud y empleo para la población del área de influencia del corredor.",
        image: "/capacidades/corredores/Antamina operaciones_0.jpg",
        imageAlt: "Mayor Movilidad",
        size: "small" as const,
    },
    {
        text: "Desarrollo integrado del área de influencia o de más de una circunscripción territorial: países, regiones, provincias, distritos y/o comunidades.",
        image: "/capacidades/corredores/palccoyo-rainbow-mountains-near-cusco-peru.jpg",
        imageAlt: "Desarrollo Integrado",
        size: "large" as const,
    },
    {
        text: "Cubre vacíos existentes en el ordenamiento geopolítico y acelera el desarrollo y la competitividad territorial.",
        image: "/capacidades/corredores/pesca-1.jpg",
        imageAlt: "Ordenamiento Geopolítico",
        size: "small" as const,
    },
    {
        text: "Potencia la productividad y el desarrollo de clusters, robusteciendo el desarrollo bajo enfoque territorial.",
        image: "/capacidades/corredores/Laguna Arapa en Azángaro.jpg",
        imageAlt: "Productividad",
        size: "wide" as const,
    },
];

// Bento Grid Items for Nuestro Trabajo
const ourWorkItems = [
    {
        text: "Elaboración de estudios metodológicos para la constitución, gobernanza, planeamiento y gestión con actores clave.",
        image: "/capacidades/corredores/APLCMEZPQZBZ3OIEJQMS5TLVYQ.jpg",
        imageAlt: "Estudios Metodológicos",
        size: "small" as const,
    },
    {
        text: "Megaproyectos e proyectos de desarrollo para potenciar el impacto en el cierre de brechas.",
        image: "/capacidades/corredores/corredores.jpg",
        imageAlt: "Megaproyectos",
        size: "medium" as const,
    },
    {
        text: "KPI y sistema de datos e información digital de Corredores Económicos Territoriales.",
        image: "https://images.unsplash.com/photo-1551288049-bbbda5366991?w=800&h=600&fit=crop",
        imageAlt: "Sistemas de Datos",
        size: "medium" as const,
    },
];

const headerImage = "/capacidades/corredores.jpg";
---

<Layout title="Corredores Económicos Territoriales - CCD">
    <PageHeader
        title="Corredores Económicos Territoriales"
        backgroundImage={headerImage}
    />

    <section class="bg-white">
        <div class="container mx-auto px-6 lg:px-12 py-16 md:py-24">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
                <!-- CONTENIDO PRINCIPAL (9 columnas) -->
                <div class="lg:col-span-9 space-y-24">
                    <!-- SECCIÓN 1: GENERACIÓN DE VALOR CLIENTE -->
                    <div class="space-y-12">
                        <ValueGenerationHero
                            title="Generación de Valor Cliente"
                            description="Optimiza la inversión social pública y privada mediante corredores económicos territoriales que generan sinergias, complementariedad y mayores beneficios para la población."
                        />

                        <BentoGrid items={valueGenerationItems} />
                    </div>

                    <!-- SECCIÓN 2: NUESTRO TRABAJO -->
                    <div class="space-y-12 pt-12 border-t border-gray-200">
                        <div class="text-center md:text-left">
                            <h2
                                class="font-serif text-4xl md:text-5xl font-bold text-gray-900 mb-6"
                            >
                                Nuestro Trabajo
                            </h2>
                        </div>

                        <BentoGrid items={ourWorkItems} />

                        <!-- Componentes del Corredor -->
                        <div
                            class="bg-gradient-to-br from-gray-50 to-white rounded-3xl p-8 md:p-12 border border-gray-200 shadow-sm"
                        >
                            <h4
                                class="font-serif text-2xl font-bold text-gray-900 mb-8 pb-4 border-b border-gray-200"
                            >
                                Componentes del Corredor Económico
                            </h4>
                            <ul
                                class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-5"
                            >
                                {
                                    [
                                        "Constitución y Gobernanza",
                                        "Planeamiento Territorial",
                                        "Estudios Metodológicos",
                                        "Formación de Corredores",
                                        "Megaproyectos de Desarrollo",
                                        "Cierre de Brechas",
                                        "KPI e Indicadores",
                                        "Sistema Digital de Datos",
                                    ].map((item) => (
                                        <li class="flex items-start group">
                                            <span class="w-2 h-2 rounded-full bg-primary mt-2 mr-3 flex-shrink-0 group-hover:scale-150 transition-transform" />
                                            <span class="text-gray-700 font-medium text-base group-hover:text-primary transition-colors">
                                                {item}
                                            </span>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>

                        <!-- Siguiente Capacidad -->
                        <div class="pt-12">
                            <a
                                href="/capacidades/desarrollo"
                                class="group flex items-center justify-between p-8 rounded-2xl bg-gray-50 border border-gray-100 hover:border-primary/30 transition-all"
                            >
                                <div>
                                    <span
                                        class="text-sm font-bold text-primary uppercase tracking-widest"
                                        >Siguiente Capacidad</span
                                    >
                                    <h4
                                        class="text-2xl font-serif font-bold text-gray-900 mt-2"
                                    >
                                        Desarrollo Social y Sostenibilidad
                                    </h4>
                                </div>
                                <div
                                    class="w-12 h-12 rounded-full bg-white border border-gray-200 flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-all"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-6 w-6"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- COLUMNA DERECHA: SIDEBAR (3/12) -->
                <CapabilitySidebar
                    specialists={selectedSpecialists}
                    industries={selectedIndustries}
                />
            </div>
        </div>
    </section>
</Layout>
