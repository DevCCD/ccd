---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';

// Importamos nuestra "base de datos"
import { teamMembers, industriesData } from '../../data/teamData';

const selectedSpecialists = [
    teamMembers["alvaro-gordillo"],
    teamMembers["rudy-laguna"]
];

const selectedIndustries = [
    industriesData["infraestructura"],
    industriesData["agricultura"]
];

const headerImage = "/capacidades/corredores.jpg";
---

<Layout title="Corredores Económicos Territoriales - CCD">
    
    <PageHeader 
        title="Corredores Económicos Territoriales" 
        backgroundImage={headerImage}
    />

    <section class="bg-white py-20 md:py-32">
        <div class="container mx-auto px-6 lg:px-12">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 lg:gap-24">
                
                <!-- COLUMNA IZQUIERDA: CONTENIDO PRINCIPAL (9/12) -->
                <div class="lg:col-span-9 space-y-20">
                    
                    <!-- SECCIÓN 1: GENERACIÓN DE VALOR CLIENTE -->
                    <div class="space-y-12">
                        <h2 class="font-serif text-5xl md:text-6xl font-bold text-primary leading-tight">
                            Generación de Valor Cliente
                        </h2>
                        
                        <div class="space-y-8">
                            <p class="text-2xl text-gray-800 leading-relaxed font-light">
                                Optimiza la inversión social pública y privada mediante corredores económicos territoriales que generan sinergias, complementariedad y mayores beneficios para la población.
                            </p>
                        </div>

                        <!-- IMAGEN 1 -->
                        <div class="w-full h-96 bg-gray-100 rounded-lg overflow-hidden">
                            <img 
                                src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=1200&h=500&fit=crop" 
                                alt="Corredores Económicos"
                                class="w-full h-full object-cover"
                            />
                        </div>
                    </div>

                    <!-- SECCIÓN 2: CONCEPTOS CLAVE -->
                    <div class="space-y-16">
                        <!-- Concepto 1: Con Imagen Derecha -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                            <div class="border-l-4 border-primary pl-8">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    Visión de prosperidad multi regional, provincial, distrital y comunitaria que genera sinergias y complementariedad entre los proyectos públicos y privados.
                                </p>
                            </div>
                            <div class="h-64 bg-gray-100 rounded-lg overflow-hidden">
                                <img 
                                    src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=400&h=300&fit=crop" 
                                    alt="Visión de Prosperidad"
                                    class="w-full h-full object-cover"
                                />
                            </div>
                        </div>

                        <!-- Concepto 2: Con Imagen Izquierda -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                            <div class="h-64 bg-gray-100 rounded-lg overflow-hidden">
                                <img 
                                    src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=400&h=300&fit=crop" 
                                    alt="Mayor Movilidad"
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            <div class="border-l-4 border-primary pl-8">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    Mayor movilidad y oportunidades de educación, salud y empleo para la población del área de influencia del corredor.
                                </p>
                            </div>
                        </div>

                        <!-- Concepto 3: Solo Texto -->
                        <div class="border-l-4 border-primary pl-8 py-6">
                            <p class="text-xl text-gray-800 leading-relaxed">
                                Desarrollo integrado del área de influencia o de más de una circunscripción territorial: países, regiones, provincias, distritos y/o comunidades.
                            </p>
                        </div>

                        <!-- Concepto 4: Con Imagen Derecha -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                            <div class="border-l-4 border-primary pl-8">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    Cubre vacíos existentes en el ordenamiento geopolítico y acelera el desarrollo y la competitividad territorial.
                                </p>
                            </div>
                            <div class="h-64 bg-gray-100 rounded-lg overflow-hidden">
                                <img 
                                    src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=400&h=300&fit=crop" 
                                    alt="Ordenamiento Geopolítico"
                                    class="w-full h-full object-cover"
                                />
                            </div>
                        </div>

                        <!-- Concepto 5: Con Imagen Izquierda -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                            <div class="h-64 bg-gray-100 rounded-lg overflow-hidden">
                                <img 
                                    src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=400&h=300&fit=crop" 
                                    alt="Productividad"
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            <div class="border-l-4 border-primary pl-8">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    Potencia la productividad y el desarrollo de clusters, robusteciendo el desarrollo bajo enfoque territorial.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- IMAGEN 2 -->
                    <div class="w-full h-96 bg-gray-100 rounded-lg overflow-hidden">
                        <img 
                            src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=1200&h=500&fit=crop" 
                            alt="Corredores Territoriales"
                            class="w-full h-full object-cover"
                        />
                    </div>

                    <!-- SECCIÓN 3: NUESTRO TRABAJO -->
                    <div class="space-y-12 pt-12 border-t-2 border-gray-200">
                        <h2 class="font-serif text-5xl md:text-6xl font-bold text-primary leading-tight">
                            Nuestro Trabajo
                        </h2>
                        
                        <div class="space-y-8">
                            <div class="bg-gray-50 p-8 rounded-lg">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    Elaboración de estudios metodológicos para la constitución, gobernanza, planeamiento y gestión con actores público - privado claves en la formación, consolidación y crecimiento de Corredores Económicos Territoriales.
                                </p>
                            </div>

                            <div class="bg-gray-50 p-8 rounded-lg">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    Megaproyectos e proyectos de desarrollo para potenciar el impacto en el cierre de brechas y desarrollo de la población del Corredor Económico Territorial.
                                </p>
                            </div>

                            <div class="bg-gray-50 p-8 rounded-lg">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    KPI y sistema de datos e información digital de Corredores Económicos Territoriales.
                                </p>
                            </div>
                        </div>

                        <!-- IMAGEN 3 -->
                        <div class="w-full h-80 bg-gray-100 rounded-lg overflow-hidden">
                            <img 
                                src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=1200&h=500&fit=crop" 
                                alt="Nuestro Trabajo"
                                class="w-full h-full object-cover"
                            />
                        </div>
                    </div>

                    <!-- SECCIÓN 4: COMPONENTES DEL CORREDOR -->
                    <div class="space-y-8">
                        <h3 class="text-3xl font-bold text-gray-900">Componentes del Corredor Económico</h3>
                        
                        <!-- GRID UNIFORME: 1 columna en móvil, 2 en tablet, 4 en desktop -->
                        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
                            
                            <!-- COMPONENTE 1: Rojo Sutil -->
                            <div class="group relative rounded-xl h-40 bg-red-50 border border-red-100 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-red-900 font-bold text-lg">Constitución y Gobernanza</h4>
                            </div>

                            <!-- COMPONENTE 2: Celeste Sutil -->
                            <div class="group relative rounded-xl h-40 bg-sky-50 border border-sky-100 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-sky-900 font-bold text-lg">Planeamiento Territorial</h4>
                            </div>

                            <!-- COMPONENTE 3: Gris Sutil -->
                            <div class="group relative rounded-xl h-40 bg-gray-50 border border-gray-200 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-gray-900 font-bold text-lg">Estudios Metodológicos</h4>
                            </div>

                            <!-- COMPONENTE 4: Rojo Sutil -->
                            <div class="group relative rounded-xl h-40 bg-red-50 border border-red-100 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-red-900 font-bold text-lg">Formación de Corredores</h4>
                            </div>

                            <!-- COMPONENTE 5: Celeste Sutil -->
                            <div class="group relative rounded-xl h-40 bg-sky-50 border border-sky-100 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-sky-900 font-bold text-lg">Megaproyectos de Desarrollo</h4>
                            </div>

                            <!-- COMPONENTE 6: Gris Sutil -->
                            <div class="group relative rounded-xl h-40 bg-gray-50 border border-gray-200 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-gray-900 font-bold text-lg">Cierre de Brechas</h4>
                            </div>

                            <!-- COMPONENTE 7: Rojo Sutil -->
                            <div class="group relative rounded-xl h-40 bg-red-50 border border-red-100 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-red-900 font-bold text-lg">KPI e Indicadores</h4>
                            </div>

                            <!-- COMPONENTE 8: Celeste Sutil -->
                            <div class="group relative rounded-xl h-40 bg-sky-50 border border-sky-100 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-sky-900 font-bold text-lg">Sistema Digital de Datos</h4>
                            </div>

                        </div>
                    </div>

                    <!-- IMAGEN 4 -->
                    <div class="w-full h-80 bg-gray-100 rounded-lg overflow-hidden">
                        <img 
                            src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=1200&h=500&fit=crop" 
                            alt="Componentes"
                            class="w-full h-full object-cover"
                        />
                    </div>

                </div>

                <!-- COLUMNA DERECHA: SIDEBAR (3/12) -->
                <aside class="lg:col-span-3">
                    <div class="sticky top-32 space-y-12">
                        
                        <!-- ESPECIALISTAS -->
                        <div>
                            <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-3 border-b border-gray-300">
                                Especialistas
                            </h3>
                            <div class="space-y-6">
                                {selectedSpecialists.map((member) => (
                                    <a 
                                        href={`/nosotros/equipo/${member.slug}`}
                                        class="group block hover:opacity-70 transition-opacity"
                                    >
                                        <div class="mb-3 h-40 bg-gray-100 rounded-lg flex items-center justify-center overflow-hidden">
                                            <img 
                                                src={member.image} 
                                                alt={member.name}
                                                class="h-full w-auto object-contain"
                                            />
                                        </div>
                                        <h4 class="font-bold text-sm text-gray-900 group-hover:text-primary transition-colors">
                                            {member.name}
                                        </h4>
                                        <p class="text-xs text-gray-600 mt-1 leading-tight">
                                            {member.role}
                                        </p>
                                    </a>
                                ))}
                            </div>
                        </div>

                        <!-- INDUSTRIAS -->
                        <div>
                            <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-3 border-b border-gray-300">
                                Industrias Relacionadas
                            </h3>
                            <div class="space-y-4">
                                {selectedIndustries.map((ind) => (
                                    <a 
                                        href={ind.link}
                                        class="group block hover:opacity-70 transition-opacity"
                                    >
                                        <div class="mb-2 h-24 bg-gray-100 rounded-lg overflow-hidden flex items-center justify-center">
                                            <img 
                                                src={ind.image} 
                                                alt={ind.title}
                                                class="w-full h-full object-cover"
                                            />
                                        </div>
                                        <h4 class="font-bold text-xs text-gray-900 group-hover:text-primary transition-colors">
                                            {ind.title}
                                        </h4>
                                    </a>
                                ))}
                            </div>
                        </div>

                    </div>
                </aside>

            </div>
        </div>
    </section>

</Layout>