---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';
import TeamCard from '../../components/TeamCard.astro';
import SidebarCard from '../../components/SidebarCard.astro';

// Importamos nuestra "base de datos"
import { teamMembers, industriesData } from '../../data/teamData';

// ========================================================================
// 1. CONFIGURACIÓN DE LA PÁGINA (AQUÍ EDITAS LO QUE QUIERES MOSTRAR)
// ========================================================================

// A. SELECCIONA LOS ESPECIALISTAS PARA ESTA PÁGINA
// Solo pon los IDs de las personas que definiste en teamData.js
const selectedSpecialists = [
    teamMembers["rudy-laguna"], 
    teamMembers["alvaro-gordillo"] 
];

// B. SELECCIONA LAS INDUSTRIAS RELACIONADAS
const selectedIndustries = [
    industriesData["mineria"],
    industriesData["agricultura"]
];

// C. IMAGEN DE CABECERA
const headerImage = "/capacidades/desarrollo.jpg"; // Asegúrate de tener esta imagen
---

<Layout title="Desarrollo - CCD">
    
    <!-- ENCABEZADO CON IMAGEN DE FONDO -->
    <PageHeader 
        title="Desarrollo" 
        backgroundImage={headerImage}
    />

    <section class="bg-white py-16 md:py-24">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24">
                
                <!-- ============================================ -->
                <!-- COLUMNA IZQUIERDA: CONTENIDO DEL PDF (8/12)  -->
                <!-- ============================================ -->
                <div class="lg:col-span-8 space-y-16">
                    
                    <!-- SECCIÓN: Generación de Valor Cliente -->
                    <div>
                        <h3 class="font-serif text-3xl font-bold text-primary mb-8">
                            Generación de Valor Cliente
                        </h3>
                        
                        <!-- Intro destacada -->
                        <div class="bg-gradient-to-r from-primary/5 to-primary/10 p-8 rounded-xl mb-12 border-l-4 border-primary">
                            <p class="text-gray-800 text-lg font-medium leading-relaxed">
                                Mejoramos la <span class="font-bold text-primary">calidad de vida integral</span> de las personas mediante desarrollo territorial planificado que cierra brechas económicas y sociales.
                            </p>
                        </div>

                        <!-- Layout: Texto + Imagen alternado -->
                        
                        <!-- Item 1: Texto Izquierda, Imagen Derecha -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12 items-center">
                            <div>
                                <div class="flex items-start mb-4">
                                    <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary/10 text-primary font-bold text-lg flex-shrink-0">1</div>
                                    <h4 class="font-bold text-xl text-gray-900 ml-4">Mejora de condiciones de vida</h4>
                                </div>
                                <p class="text-gray-700 text-base leading-relaxed ml-14">
                                    Educación universal, infraestructura básica, servicios de salud de calidad, buen gobierno e incremento de ingresos.
                                </p>
                            </div>
                            <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
                                <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=500&h=400&fit=crop" alt="Desarrollo" class="w-full h-full object-cover"/>
                            </div>
                        </div>

                        <!-- Item 2: Imagen Izquierda, Texto Derecha -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12 items-center">
                            <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center order-2 md:order-1">
                                <img src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=500&h=400&fit=crop" alt="Competitividad" class="w-full h-full object-cover"/>
                            </div>
                            <div class="order-1 md:order-2">
                                <div class="flex items-start mb-4">
                                    <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary/10 text-primary font-bold text-lg flex-shrink-0">2</div>
                                    <h4 class="font-bold text-xl text-gray-900 ml-4">Cierre de brechas</h4>
                                </div>
                                <p class="text-gray-700 text-base leading-relaxed ml-14">
                                    Promovemos competitividad territorial mediante soluciones que mejoran el bienestar económico y social.
                                </p>
                            </div>
                        </div>

                        <!-- Item 3: Texto Izquierda, Imagen Derecha -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
                            <div>
                                <div class="flex items-start mb-4">
                                    <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary/10 text-primary font-bold text-lg flex-shrink-0">3</div>
                                    <h4 class="font-bold text-xl text-gray-900 ml-4">Creación de riqueza</h4>
                                </div>
                                <p class="text-gray-700 text-base leading-relaxed ml-14">
                                    Generamos prosperidad económica y social que mantiene y mejora el bienestar de los habitantes.
                                </p>
                            </div>
                            <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
                                <img src="https://images.unsplash.com/photo-1559027615-cd4628902d4a?w=500&h=400&fit=crop" alt="Prosperidad" class="w-full h-full object-cover"/>
                            </div>
                        </div>
                    </div>

                    <!-- SECCIÓN: Nuestro Trabajo -->
                    <div>
                        <h3 class="font-serif text-3xl font-bold text-primary mb-8">
                            Nuestro Trabajo
                        </h3>
                        
                        <!-- Card 1: Planes de Desarrollo -->
                        <div class="mb-12">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
                                <div>
                                    <div class="flex items-start mb-4">
                                        <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary text-white font-bold flex-shrink-0">A</div>
                                        <h4 class="font-bold text-xl text-gray-900 ml-4">Planes y Estudios de Desarrollo</h4>
                                    </div>
                                    <p class="text-gray-700 text-base leading-relaxed ml-14 mb-4">
                                        Elaboramos planes participativos a nivel regional, provincial, distrital y comunitario con visión integral de desarrollo territorial.
                                    </p>
                                </div>
                                <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
                                    <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=500&h=400&fit=crop" alt="Planes" class="w-full h-full object-cover"/>
                                </div>
                            </div>
                        </div>

                        <!-- Card 2: Asistencia Técnica -->
                        <div class="mb-12 bg-gray-50 p-8 rounded-xl">
                            <div class="flex items-start mb-6">
                                <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary text-white font-bold flex-shrink-0">B</div>
                                <h4 class="font-bold text-xl text-gray-900 ml-4">Implementación y Monitoreo</h4>
                            </div>
                            <p class="text-gray-700 text-base leading-relaxed ml-14 mb-6">
                                Brindamos asistencia técnica integral en seguimiento de planes con indicadores en:
                            </p>
                            <div class="ml-14 grid grid-cols-1 md:grid-cols-2 gap-4">
                                <div class="flex items-center">
                                    <span class="flex items-center justify-center h-8 w-8 rounded-full bg-primary/10 text-primary font-bold text-sm flex-shrink-0">✓</span>
                                    <span class="ml-3 text-gray-700">Sociodemografía</span>
                                </div>
                                <div class="flex items-center">
                                    <span class="flex items-center justify-center h-8 w-8 rounded-full bg-primary/10 text-primary font-bold text-sm flex-shrink-0">✓</span>
                                    <span class="ml-3 text-gray-700">Crecimiento Económico</span>
                                </div>
                                <div class="flex items-center">
                                    <span class="flex items-center justify-center h-8 w-8 rounded-full bg-primary/10 text-primary font-bold text-sm flex-shrink-0">✓</span>
                                    <span class="ml-3 text-gray-700">Conectividad</span>
                                </div>
                                <div class="flex items-center">
                                    <span class="flex items-center justify-center h-8 w-8 rounded-full bg-primary/10 text-primary font-bold text-sm flex-shrink-0">✓</span>
                                    <span class="ml-3 text-gray-700">Ambiental</span>
                                </div>
                                <div class="flex items-center">
                                    <span class="flex items-center justify-center h-8 w-8 rounded-full bg-primary/10 text-primary font-bold text-sm flex-shrink-0">✓</span>
                                    <span class="ml-3 text-gray-700">Riesgos y Desastres</span>
                                </div>
                                <div class="flex items-center">
                                    <span class="flex items-center justify-center h-8 w-8 rounded-full bg-primary/10 text-primary font-bold text-sm flex-shrink-0">✓</span>
                                    <span class="ml-3 text-gray-700">Gobernanza</span>
                                </div>
                            </div>
                        </div>

                        <!-- Card 3: Corredores y Zonas de Influencia -->
                        <div class="mb-12">
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
                                <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center order-2 md:order-1">
                                    <img src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?w=500&h=400&fit=crop" alt="Corredores" class="w-full h-full object-cover"/>
                                </div>
                                <div class="order-1 md:order-2">
                                    <div class="flex items-start mb-4">
                                        <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary text-white font-bold flex-shrink-0">C</div>
                                        <h4 class="font-bold text-xl text-gray-900 ml-4">Corredores Económicos</h4>
                                    </div>
                                    <p class="text-gray-700 text-base leading-relaxed ml-14">
                                        Identificamos, diseñamos y promovemos corredores económicos territoriales a escala nacional, regional, local y comunal.
                                    </p>
                                </div>
                            </div>
                        </div>

                        <!-- Card 4: Planes de Inversión -->
                        <div>
                            <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
                                <div>
                                    <div class="flex items-start mb-4">
                                        <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary text-white font-bold flex-shrink-0">D</div>
                                        <h4 class="font-bold text-xl text-gray-900 ml-4">Planes Estratégicos</h4>
                                    </div>
                                    <p class="text-gray-700 text-base leading-relaxed ml-14">
                                        Elaboramos e implementamos planes estratégicos e inversiones para zonas de influencia directa e indirecta con máximo impacto social.
                                    </p>
                                </div>
                                <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
                                    <img src="https://images.unsplash.com/photo-1559027615-cd4628902d4a?w=500&h=400&fit=crop" alt="Estrategia" class="w-full h-full object-cover"/>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- ============================================ -->
                <!-- COLUMNA DERECHA: SIDEBAR (4/12)              -->
                <!-- ============================================ -->
                <aside class="lg:col-span-4 space-y-12">
                    
                    <div class="sticky top-32">
                        <!-- Especialistas -->
                        <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-2 border-b border-gray-200">
                            Especialistas en Desarrollo
                        </h3>
                        
                        <div class="space-y-6 mb-12">
                            {selectedSpecialists.map((member) => (
                                // Usamos el TeamCard que ya funciona
                                <TeamCard 
                                    name={member.name}
                                    role={member.role}
                                    image={member.image}
                                    link={`/nosotros/equipo/${member.slug}`}
                                />
                            ))}
                        </div>

                        <!-- Industrias Relacionadas -->
                        <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-2 border-b border-gray-200">
                            Industrias Relacionadas
                        </h3>
                        <div class="space-y-4">
                            {selectedIndustries.map((ind) => (
                                <SidebarCard 
                                    title={ind.title} 
                                    image={ind.image} 
                                    link={ind.link} 
                                />
                            ))}
                        </div>
                    </div>

                </aside>

            </div>
        </div>
    </section>

</Layout>