---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';
import TeamCard from '../../components/TeamCard.astro';
import SidebarCard from '../../components/SidebarCard.astro';

// Importamos la data centralizada
import { teamMembers, industriesData } from '../../data/teamData';

// ========================================================================
// CONFIGURACIÓN DE LA PÁGINA: EVALUACIÓN DE PROGRAMAS
// ========================================================================

// 1. SELECCIONA ESPECIALISTAS (Expertos en Evaluación y Economía)
const selectedSpecialists = [
    teamMembers["alex-carbajal"],   // Especialista en Evaluación de Proyectos

    teamMembers["mario-huaman"]     // Especialista en Estudios Económicos
];

// 2. SELECCIONA INDUSTRIAS RELACIONADAS
const selectedIndustries = [
   
    industriesData["mineria"],
    industriesData["educacion"]
];

// 3. IMAGEN DE CABECERA
const headerImage = "/capacidades/evaluacion.jpg"; 
---

<Layout title="Evaluación de Programas y Proyectos - CCD">
    
    <PageHeader 
        title="Evaluación de Programas y Proyectos" 
        backgroundImage={headerImage}
    />

    <section class="bg-white py-16 md:py-24">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24">
                
                <!-- ============================================ -->
                <!-- COLUMNA IZQUIERDA: CONTENIDO (8/12)          -->
                <!-- ============================================ -->
                <div class="lg:col-span-8 space-y-16">
                    
                    <!-- 1. GENERACIÓN DE VALOR CLIENTE -->
                    <div class="bg-blue-50 p-8 rounded-xl border-l-8 border-primary shadow-sm">
                        <h3 class="font-serif text-2xl font-bold text-gray-900 mb-6">
                            Generación de Valor Cliente
                        </h3>
                        
                        <ul class="space-y-8">
                            
                            <!-- Item con términos técnicos -->
                            <li class="flex flex-col text-gray-700 text-lg leading-relaxed">
                                <div class="flex items-start">
                                    <span class="bg-primary h-2.5 w-2.5 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                    <span>Mayores calidad y rendimientos esperados de la inversión social en el área de influencia:</span>
                                </div>
                                <div class="flex flex-wrap gap-3 mt-3 ml-8">
                                    <span class="bg-white border border-blue-200 text-blue-800 px-3 py-1 rounded-md text-sm font-semibold">Improvement</span>
                                    <span class="bg-white border border-blue-200 text-blue-800 px-3 py-1 rounded-md text-sm font-semibold">Accountability</span>
                                    <span class="bg-white border border-blue-200 text-blue-800 px-3 py-1 rounded-md text-sm font-semibold">Enlightenment</span>
                                </div>
                            </li>

                            <!-- Item con sublista -->
                            <li class="flex flex-col text-gray-700 text-lg leading-relaxed">
                                <div class="flex items-start">
                                    <span class="bg-primary h-2.5 w-2.5 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                    <span>Optimización e integridad vertical y horizontal de la inversión social en todas las etapas:</span>
                                </div>
                                <ul class="mt-2 ml-8 grid grid-cols-1 sm:grid-cols-2 gap-2 text-gray-600 text-base">
                                    <li class="flex items-center"><span class="text-primary mr-2">•</span> Negociación</li>
                                    <li class="flex items-center"><span class="text-primary mr-2">•</span> Aprobación</li>
                                    <li class="flex items-center"><span class="text-primary mr-2">•</span> Elaboración de estudios</li>
                                    <li class="flex items-center"><span class="text-primary mr-2">•</span> Implementación</li>
                                    <li class="flex items-center"><span class="text-primary mr-2">•</span> Operación y Mantenimiento</li>
                                </ul>
                            </li>

                            <li class="flex flex-col text-gray-700 text-lg leading-relaxed">
                                <div class="flex items-start">
                                    <span class="bg-primary h-2.5 w-2.5 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                    <span>Transparencia, ganancias de eficiencias y reportes:</span>
                                </div>
                                <p class="text-base text-gray-600 ml-8 mt-1">
                                    Accionistas, Directorio, Documentos de sostenibilidad, Anuarios, Población beneficiaria, Líderes comunales.
                                </p>
                            </li>

                            <li class="flex flex-col text-gray-700 text-lg leading-relaxed">
                                <div class="flex items-start">
                                    <span class="bg-primary h-2.5 w-2.5 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                    <span>Generación de complementariedad con intervenciones público y privadas:</span>
                                </div>
                                <div class="flex flex-wrap gap-3 mt-3 ml-8">
                                    <span class="bg-white border border-blue-200 text-blue-800 px-3 py-1 rounded-md text-sm font-semibold">Inversión</span>
                                    <span class="bg-white border border-blue-200 text-blue-800 px-3 py-1 rounded-md text-sm font-semibold">Operación y mantenimiento</span>
                                    <span class="bg-white border border-blue-200 text-blue-800 px-3 py-1 rounded-md text-sm font-semibold">Fondeo</span>
                                </div>
                            </li>

                            <li class="flex flex-col text-gray-700 text-lg leading-relaxed">
                                <div class="flex items-start">
                                    <span class="bg-primary h-2.5 w-2.5 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                    <span>Optimizar decisiones sobre intervenciones sociales para el desarrollo:</span>
                                </div>
                                <div class="flex flex-wrap gap-3 mt-3 ml-8">
                                    <span class="bg-white border border-blue-200 text-blue-800 px-3 py-1 rounded-md text-sm font-semibold">Potenciación</span>
                                    <span class="bg-white border border-blue-200 text-blue-800 px-3 py-1 rounded-md text-sm font-semibold">Restructuración</span>
                                    <span class="bg-white border border-blue-200 text-blue-800 px-3 py-1 rounded-md text-sm font-semibold">Culminación</span>
                                </div>
                            </li>

                        </ul>
                    </div>

                    <!-- 2. NUESTRO TRABAJO -->
                    <div>
                        <h3 class="font-serif text-3xl font-bold text-primary mb-8">
                            Nuestro Trabajo
                        </h3>
                        
                        <!-- Card A -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12 items-center bg-gray-50 p-8 rounded-xl">
                            <div>
                                <div class="flex items-start mb-4">
                                    <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary text-white font-bold text-lg flex-shrink-0">A</div>
                                    <h4 class="font-bold text-xl text-gray-900 ml-4">Evaluación Integral</h4>
                                </div>
                                <div class="ml-14">
                                    <p class="text-gray-700 text-sm font-semibold mb-3">Evaluación cualitativa y cuantitativa de programas y proyectos:</p>
                                    <ul class="space-y-2">
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Pertinencia y eficiencia
                                        </li>
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Eficacia e impacto
                                        </li>
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Sostenibilidad
                                        </li>
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            ExAnte, ExDure, ExPost
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
                                <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=500&h=400&fit=crop" alt="Evaluación" class="w-full h-full object-cover"/>
                            </div>
                        </div>

                        <!-- Card B -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center bg-gray-50 p-8 rounded-xl">
                            <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center order-2 md:order-1">
                                <img src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=500&h=400&fit=crop" alt="Implementación" class="w-full h-full object-cover"/>
                            </div>
                            <div class="order-1 md:order-2">
                                <div class="flex items-start mb-4">
                                    <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary text-white font-bold text-lg flex-shrink-0">B</div>
                                    <h4 class="font-bold text-xl text-gray-900 ml-4">Participación y Resultados</h4>
                                </div>
                                <div class="ml-14">
                                    <ul class="space-y-2">
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Participación de stakeholders
                                        </li>
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Presentación de resultados
                                        </li>
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Cuantificación de impactos
                                        </li>
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Implementar recomendaciones
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                   

                </div>

                <!-- ============================================ -->
                <!-- COLUMNA DERECHA: SIDEBAR (4/12)              -->
                <!-- ============================================ -->
                <aside class="lg:col-span-4 space-y-12">
                    <div class="sticky top-32">
                        <!-- Especialistas -->
                        <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-2 border-b border-gray-200">
                            Expertos en Evaluación
                        </h3>
                        <div class="space-y-6 mb-12">
                            {selectedSpecialists.map((member) => (
                                <TeamCard 
                                    name={member.name}
                                    role={member.role}
                                    image={member.image}
                                    link={`/nosotros/equipo/${member.slug}`}
                                />
                            ))}
                        </div>

                        <!-- Industrias Relacionadas -->
                        <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-2 border-b border-gray-200">
                            Industrias Relacionadas
                        </h3>
                        <div class="space-y-4">
                            {selectedIndustries.map((ind) => (
                                ind ? (
                                    <SidebarCard 
                                        title={ind.title} 
                                        image={ind.image} 
                                        link={ind.link} 
                                    />
                                ) : null
                            ))}
                        </div>
                    </div>
                </aside>

            </div>
        </div>
    </section>

</Layout>