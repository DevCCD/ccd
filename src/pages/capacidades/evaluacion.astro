---
import Layout from "../../layouts/Layout.astro";
import PageHeader from "../../components/PageHeader.astro";
import ValueGenerationHero from "../../components/capacidades/ValueGenerationHero.astro";
import BentoGrid from "../../components/capacidades/BentoGrid.astro";
import CapabilitySidebar from "../../components/capacidades/CapabilitySidebar.astro";

// Importamos nuestra "base de datos"
import { teamMembers, industriesData } from "../../data/teamData";

const selectedSpecialists = [
    teamMembers["alex-carbajal"],
    teamMembers["mario-huaman"],
];

const selectedIndustries = [
    industriesData["mineria"],
    industriesData["educacion"],
];

// Bento Grid Items for Generación de Valor Cliente
const valueGenerationItems = [
    {
        text: "Pertinencia y eficiencia en la asignación de recursos para maximizar el retorno social de las inversiones.",
        image: "/capacidades/evaluacion de proyectos/casual-business-man-working-with-laptop.jpg",
        imageAlt: "Pertinencia y Eficiencia",
        size: "large" as const,
    },
    {
        text: "Eficacia e impacto en la generación de resultados duraderos para el desarrollo territorial.",
        image: "/capacidades/evaluacion de proyectos/antamina.jpg",
        imageAlt: "Eficacia e Impacto",
        size: "small" as const,
    },
    {
        text: "Sostenibilidad de los resultados para asegurar que las iniciativas generen valor a largo plazo.",
        image: "/capacidades/evaluacion de proyectos/evaluacion3.jpg",
        imageAlt: "Sostenibilidad",
        size: "large" as const,
    },
    {
        text: "Evaluaciones ex ante para diseñar intervenciones más efectivas desde el inicio.",
        image: "/capacidades/evaluacion de proyectos/evaluacion2.jpg",
        imageAlt: "Evaluación Ex Ante",
        size: "small" as const,
    },
    {
        text: "Evaluaciones ex post para aprender de los resultados y mejorar futuras intervenciones estratégicas.",
        image: "/capacidades/evaluacion de proyectos/open_pit_Barrick-Gold-Mine-e1493577591276-960x480.jpg",
        imageAlt: "Evaluación Ex Post",
        size: "wide" as const,
    },
];

// Bento Grid Items for Nuestro Trabajo
const ourWorkItems = [
    {
        text: "Realizamos evaluaciones de impacto para identificar efectos reales de programas en la población.",
        image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?w=800&h=600&fit=crop",
        imageAlt: "Impacto",
        size: "small" as const,
    },
    {
        text: "Desarrollamos marcos lógicos y teorías de cambio que alinean objetivos con resultados.",
        image: "/capacidades/evaluacion de proyectos/marco.jpg",
        imageAlt: "Planificación",
        size: "medium" as const,
    },
    {
        text: "Establecemos sistemas de monitoreo y seguimiento con indicadores de desempeño rigurosos.",
        image: "/capacidades/fondos/monitoreo.jpg",
        imageAlt: "Monitoreo",
        size: "medium" as const,
    },
];

const headerImage = "/capacidades/evaluacion.jpg";
---

<Layout title="Evaluación de Programas y Proyectos - CCD">
    <PageHeader
        title="Evaluación de Programas y Proyectos"
        backgroundImage={headerImage}
    />

    <section class="bg-white">
        <div class="container mx-auto px-6 lg:px-12 py-16 md:py-24">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
                <!-- CONTENIDO PRINCIPAL (9 columnas) -->
                <div class="lg:col-span-9 space-y-24">
                    <!-- SECCIÓN 1: GENERACIÓN DE VALOR CLIENTE -->
                    <div class="space-y-12">
                        <ValueGenerationHero
                            title="Generación de Valor Cliente"
                            description="Evaluamos programas y proyectos para garantizar la calidad, eficiencia y el máximo impacto en el desarrollo, optimizando cada recurso invertido."
                        />

                        <BentoGrid items={valueGenerationItems} />
                    </div>

                    <!-- SECCIÓN 2: NUESTRO TRABAJO -->
                    <div class="space-y-12 pt-12 border-t border-gray-200">
                        <div class="text-center md:text-left">
                            <h2
                                class="font-serif text-4xl md:text-5xl font-bold text-gray-900 mb-6"
                            >
                                Nuestro Trabajo
                            </h2>
                        </div>

                        <BentoGrid items={ourWorkItems} />

                        <!-- Enfoques de Evaluación -->
                        <div
                            class="bg-gradient-to-br from-gray-50 to-white rounded-3xl p-8 md:p-12 border border-gray-200 shadow-sm"
                        >
                            <h4
                                class="font-serif text-2xl font-bold text-gray-900 mb-8 pb-4 border-b border-gray-200"
                            >
                                Enfoques de Evaluación
                            </h4>
                            <ul
                                class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-5"
                            >
                                {
                                    [
                                        "Impacto y Resultados",
                                        "Eficiencia Operativa",
                                        "Pertinencia Estratégica",
                                        "Relevancia Social",
                                        "Sostenibilidad",
                                        "Equidad e Inclusión",
                                        "Análisis Costo-Beneficio",
                                        "Lecciones Aprendidas",
                                    ].map((item) => (
                                        <li class="flex items-start group">
                                            <span class="w-2 h-2 rounded-full bg-primary mt-2 mr-3 flex-shrink-0 group-hover:scale-150 transition-transform" />
                                            <span class="text-gray-700 font-medium text-base group-hover:text-primary transition-colors">
                                                {item}
                                            </span>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>

                        <!-- Siguiente Capacidad -->
                        <div class="pt-12">
                            <a
                                href="/capacidades/corredores"
                                class="group flex items-center justify-between p-8 rounded-2xl bg-gray-50 border border-gray-100 hover:border-primary/30 transition-all"
                            >
                                <div>
                                    <span
                                        class="text-sm font-bold text-primary uppercase tracking-widest"
                                        >Siguiente Capacidad</span
                                    >
                                    <h4
                                        class="text-2xl font-serif font-bold text-gray-900 mt-2"
                                    >
                                        Corredores Económicos Territoriales
                                    </h4>
                                </div>
                                <div
                                    class="w-12 h-12 rounded-full bg-white border border-gray-200 flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-all"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-6 w-6"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- COLUMNA DERECHA: SIDEBAR (3/12) -->
                <CapabilitySidebar
                    specialists={selectedSpecialists}
                    industries={selectedIndustries}
                />
            </div>
        </div>
    </section>
</Layout>
