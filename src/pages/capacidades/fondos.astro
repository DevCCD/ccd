---
import Layout from "../../layouts/Layout.astro";
import PageHeader from "../../components/PageHeader.astro";
import ValueGenerationHero from "../../components/capacidades/ValueGenerationHero.astro";
import BentoGrid from "../../components/capacidades/BentoGrid.astro";
import CapabilitySidebar from "../../components/capacidades/CapabilitySidebar.astro";

// Importamos nuestra "base de datos"
import { teamMembers, industriesData } from "../../data/teamData";

const selectedSpecialists = [
    teamMembers["fernando-jauregui"],
    teamMembers["alex-carbajal"],
];

const selectedIndustries = [
    industriesData["mineria"],
    industriesData["agricultura"],
];

// Bento Grid Items for Generación de Valor Cliente
const valueGenerationItems = [
    {
        text: "Aceleran el proceso de desarrollo local y comunal.",
        image: "/capacidades/fondos/sostenible.png",
        imageAlt: "Gobernanza",
        size: "small" as const,
    },
    {
        text: "Cofinancian y potencian la intervención pública y privada en favor del desarrollo de la población",
        image: "/capacidades/fondos/fondos-v2.png",
        imageAlt: "Cofinanciamiento",
        size: "medium" as const,
    },
];

// Bento Grid Items for Nuestro Trabajo
const ourWorkItems = [
    {
        text: "Diseñamos estructuras de gobernanza participativa para fondos de desarrollo regionales y locales.",
        image: "https://images.unsplash.com/photo-1551836022-d5d88e9218df?w=800&h=600&fit=crop",
        imageAlt: "Gobernanza",
        size: "small" as const,
    },
    {
        text: "Elaboramos marcos de asignación y cofinanciamiento que atraen inversión público-privada.",
        image: "https://images.unsplash.com/photo-1553729459-efe14ef6055d?w=800&h=600&fit=crop",
        imageAlt: "Estructuración",
        size: "medium" as const,
    },
    {
        text: "Implementamos sistemas de monitoreo y rendición de cuentas social y financiera.",
        image: "/capacidades/fondos/monitoreo.jpg",
        imageAlt: "Monitoreo",
        size: "medium" as const,
    },
];

const headerImage = "/capacidades/fondos.jpg";
---

<Layout title="Fondos de Desarrollo - CCD">
    <PageHeader title="Fondos de Desarrollo" backgroundImage={headerImage} />

    <section class="bg-white">
        <div class="container mx-auto px-6 lg:px-12 py-16 md:py-24">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
                <!-- CONTENIDO PRINCIPAL (9 columnas) -->
                <div class="lg:col-span-9 space-y-24">
                    <!-- SECCIÓN 1: GENERACIÓN DE VALOR CLIENTE -->
                    <div class="space-y-12">
                        <ValueGenerationHero
                            title="Generación de Valor Cliente"
                            description="Los fondos de desarrollo con una adecuada gobernanza aceleran el progreso local y potencian la inversión pública y privada, creando mecanismos sostenibles de financiamiento."
                        />
                        <!-- Instrumentos de Fondos -->
                        <div
                            class="bg-gradient-to-br from-gray-50 to-white rounded-3xl p-8 md:p-12 border border-gray-200 shadow-sm"
                        >
                            <h4
                                class="font-serif text-2xl font-bold text-gray-900 mb-8 pb-4 border-b border-gray-200"
                            >
                                Los fondos de desarrollo locales o comunales
                                contribuyen con la gestión social de la empresa:
                            </h4>
                            <ul
                                class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-5"
                            >
                                {
                                    [
                                        "Fondo Rotatorio",
                                        "Legitimidad",
                                        "Proceso participativo",
                                        "Generación de confianza con actores",

                                        "Mayor calidad y rapidez en las intervenciones con los proyectos sociales",
                                        "Mejores beneficios para la población",
                                    ].map((item) => (
                                        <li class="flex items-start group">
                                            <span class="w-2 h-2 rounded-full bg-primary mt-2 mr-3 flex-shrink-0 group-hover:scale-150 transition-transform" />
                                            <span class="text-gray-700 font-medium text-base group-hover:text-primary transition-colors">
                                                {item}
                                            </span>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>

                        <BentoGrid items={valueGenerationItems} />
                    </div>

                    <!-- SECCIÓN 2: NUESTRO TRABAJO -->
                    <div class="space-y-12 pt-12 border-t border-gray-200">
                        <div class="text-center md:text-left">
                            <h2
                                class="font-serif text-4xl md:text-5xl font-bold text-gray-900 mb-6"
                            >
                                Nuestro Trabajo
                            </h2>
                        </div>

                        <BentoGrid items={ourWorkItems} />

                        <!-- Instrumentos de Fondos -->
                        <div
                            class="bg-gradient-to-br from-gray-50 to-white rounded-3xl p-8 md:p-12 border border-gray-200 shadow-sm"
                        >
                            <h4
                                class="font-serif text-2xl font-bold text-gray-900 mb-8 pb-4 border-b border-gray-200"
                            >
                                Instrumentos de Fondos
                            </h4>
                            <ul
                                class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-5"
                            >
                                {
                                    [
                                        "Fondo Rotatorio",
                                        "Cofinanciamiento",
                                        "Garantías",
                                        "Subvenciones",
                                        "Fondos de Riesgo",
                                        "Donaciones",
                                        "Préstamos Blandos",
                                        "Alianzas Estratégicas",
                                    ].map((item) => (
                                        <li class="flex items-start group">
                                            <span class="w-2 h-2 rounded-full bg-primary mt-2 mr-3 flex-shrink-0 group-hover:scale-150 transition-transform" />
                                            <span class="text-gray-700 font-medium text-base group-hover:text-primary transition-colors">
                                                {item}
                                            </span>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>

                        <!-- Siguiente Capacidad -->
                        <div class="pt-12">
                            <a
                                href="/capacidades/evaluacion"
                                class="group flex items-center justify-between p-8 rounded-2xl bg-gray-50 border border-gray-100 hover:border-primary/30 transition-all"
                            >
                                <div>
                                    <span
                                        class="text-sm font-bold text-primary uppercase tracking-widest"
                                        >Siguiente Capacidad</span
                                    >
                                    <h4
                                        class="text-2xl font-serif font-bold text-gray-900 mt-2"
                                    >
                                        Evaluación de Programas y Proyectos
                                    </h4>
                                </div>
                                <div
                                    class="w-12 h-12 rounded-full bg-white border border-gray-200 flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-all"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-6 w-6"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- COLUMNA DERECHA: SIDEBAR (3/12) -->
                <CapabilitySidebar
                    specialists={selectedSpecialists}
                    industries={selectedIndustries}
                />
            </div>
        </div>
    </section>
</Layout>
