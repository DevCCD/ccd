---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';

// Importamos nuestra "base de datos"
import { teamMembers, industriesData } from '../../data/teamData';

const selectedSpecialists = [
    teamMembers["elmer-huaman"],
    teamMembers["jorge-ruiz"],
    teamMembers["karla-casas"]
];

const selectedIndustries = [
    industriesData["educacion"],
    industriesData["infraestructura"]
];

const headerImage = "/capacidades/fortalecimiento.jpg";
---

<Layout title="Fortalecimiento de Capacidades - CCD">
    
    <PageHeader 
        title="Fortalecimiento de Capacidades y Capital Humano" 
        backgroundImage={headerImage}
    />

    <section class="bg-white py-20 md:py-32">
        <div class="container mx-auto px-6 lg:px-12">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 lg:gap-24">
                
                <!-- COLUMNA IZQUIERDA: CONTENIDO PRINCIPAL (9/12) -->
                <div class="lg:col-span-9 space-y-20">
                    
                    <!-- SECCIÓN 1: GENERACIÓN DE VALOR CLIENTE -->
                    <div class="space-y-12">
                        <h2 class="font-serif text-5xl md:text-6xl font-bold text-primary leading-tight">
                            Generación de Valor Cliente
                        </h2>
                        
                        <div class="space-y-8">
                            <p class="text-2xl text-gray-800 leading-relaxed font-light">
                                Fortalecemos capacidades institucionales y capital humano para impulsar desarrollo sostenible y competitivo.
                            </p>
                        </div>

                        <!-- IMAGEN 1 -->
                        <div class="w-full h-96 bg-gray-100 rounded-lg overflow-hidden">
                            <img 
                                src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=1200&h=500&fit=crop" 
                                alt="Fortalecimiento"
                                class="w-full h-full object-cover"
                            />
                        </div>
                    </div>

                    <!-- SECCIÓN 2: CONCEPTOS CLAVE -->
                    <div class="space-y-16">
                        <!-- Concepto 1: Con Imagen Derecha -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                            <div class="border-l-4 border-primary pl-8">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    Viabilidad político-técnica que crea condiciones para que iniciativas de desarrollo sean posibles y sostenibles.
                                </p>
                            </div>
                            <div class="h-64 bg-gray-100 rounded-lg overflow-hidden">
                                <img 
                                    src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=400&h=300&fit=crop" 
                                    alt="Viabilidad"
                                    class="w-full h-full object-cover"
                                />
                            </div>
                        </div>

                        <!-- Concepto 2: Con Imagen Izquierda -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                            <div class="h-64 bg-gray-100 rounded-lg overflow-hidden">
                                <img 
                                    src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=400&h=300&fit=crop" 
                                    alt="Eficiencia"
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            <div class="border-l-4 border-primary pl-8">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    Eficiencia operativa mediante capacitación y fortalecimiento de personas y organizaciones.
                                </p>
                            </div>
                        </div>

                        <!-- Concepto 3: Solo Texto -->
                        <div class="border-l-4 border-primary pl-8 py-6">
                            <p class="text-xl text-gray-800 leading-relaxed">
                                Transferencia de conocimiento y metodologías para generar autonomía e independencia institucional.
                            </p>
                        </div>

                        <!-- Concepto 4: Con Imagen Derecha -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                            <div class="border-l-4 border-primary pl-8">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    Liderazgo transformador que inspira cambio positivo en instituciones públicas y privadas.
                                </p>
                            </div>
                            <div class="h-64 bg-gray-100 rounded-lg overflow-hidden">
                                <img 
                                    src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=400&h=300&fit=crop" 
                                    alt="Liderazgo"
                                    class="w-full h-full object-cover"
                                />
                            </div>
                        </div>

                        <!-- Concepto 5: Con Imagen Izquierda -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
                            <div class="h-64 bg-gray-100 rounded-lg overflow-hidden">
                                <img 
                                    src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=400&h=300&fit=crop" 
                                    alt="Inclusión"
                                    class="w-full h-full object-cover"
                                />
                            </div>
                            <div class="border-l-4 border-primary pl-8">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    Inclusión social mediante acceso igualitario a oportunidades de desarrollo y aprendizaje.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- IMAGEN 2 -->
                    <div class="w-full h-96 bg-gray-100 rounded-lg overflow-hidden">
                        <img 
                            src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=1200&h=500&fit=crop" 
                            alt="Capacidades Institucionales"
                            class="w-full h-full object-cover"
                        />
                    </div>

                    <!-- SECCIÓN 3: NUESTRO TRABAJO -->
                    <div class="space-y-12 pt-12 border-t-2 border-gray-200">
                        <h2 class="font-serif text-5xl md:text-6xl font-bold text-primary leading-tight">
                            Nuestro Trabajo
                        </h2>
                        
                        <div class="space-y-8">
                            <div class="bg-gray-50 p-8 rounded-lg">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    Diseñamos programas de capacitación integral adaptados a contextos locales y necesidades específicas.
                                </p>
                            </div>

                            <div class="bg-gray-50 p-8 rounded-lg">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    Formamos líderes y gestores públicos con competencias para impulsar desarrollo territorial.
                                </p>
                            </div>

                            <div class="bg-gray-50 p-8 rounded-lg">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    Implementamos sistemas de aprendizaje continuo y espacios de intercambio de experiencias.
                                </p>
                            </div>

                            <div class="bg-gray-50 p-8 rounded-lg">
                                <p class="text-xl text-gray-800 leading-relaxed">
                                    Acompañamos organizaciones en procesos de cambio organizacional y modernización institucional.
                                </p>
                            </div>
                        </div>

                        <!-- IMAGEN 3 -->
                        <div class="w-full h-80 bg-gray-100 rounded-lg overflow-hidden">
                            <img 
                                src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=1200&h=500&fit=crop" 
                                alt="Nuestro Trabajo"
                                class="w-full h-full object-cover"
                            />
                        </div>
                    </div>

                    <!-- SECCIÓN 4: EJES DE FORTALECIMIENTO -->
                    <div class="space-y-8">
                        <h3 class="text-3xl font-bold text-gray-900">Ejes de Fortalecimiento</h3>
                        
                        <!-- GRID UNIFORME: 1 columna en móvil, 2 en tablet, 4 en desktop -->
                        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">
                            
                            <!-- EJE 1: Rojo Sutil -->
                            <div class="group relative rounded-xl h-40 bg-red-50 border border-red-100 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-red-900 font-bold text-lg">Capacitación Técnica</h4>
                            </div>

                            <!-- EJE 2: Celeste Sutil -->
                            <div class="group relative rounded-xl h-40 bg-sky-50 border border-sky-100 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-sky-900 font-bold text-lg">Gestión Pública</h4>
                            </div>

                            <!-- EJE 3: Gris Sutil -->
                            <div class="group relative rounded-xl h-40 bg-gray-50 border border-gray-200 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-gray-900 font-bold text-lg">Liderazgo</h4>
                            </div>

                            <!-- EJE 4: Rojo Sutil -->
                            <div class="group relative rounded-xl h-40 bg-red-50 border border-red-100 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-red-900 font-bold text-lg">Planificación Estratégica</h4>
                            </div>

                            <!-- EJE 5: Celeste Sutil -->
                            <div class="group relative rounded-xl h-40 bg-sky-50 border border-sky-100 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-sky-900 font-bold text-lg">Modernización</h4>
                            </div>

                            <!-- EJE 6: Gris Sutil -->
                            <div class="group relative rounded-xl h-40 bg-gray-50 border border-gray-200 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-gray-900 font-bold text-lg">Gobernanza Democrática</h4>
                            </div>

                            <!-- EJE 7: Rojo Sutil -->
                            <div class="group relative rounded-xl h-40 bg-red-50 border border-red-100 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-red-900 font-bold text-lg">Gestión de Cambio</h4>
                            </div>

                            <!-- EJE 8: Celeste Sutil -->
                            <div class="group relative rounded-xl h-40 bg-sky-50 border border-sky-100 hover:shadow-md transition-all duration-300 flex items-center justify-center p-6 text-center">
                                <h4 class="text-sky-900 font-bold text-lg">Monitoreo y Aprendizaje</h4>
                            </div>

                        </div>
                    </div>

                    <!-- IMAGEN 4 -->
                    <div class="w-full h-80 bg-gray-100 rounded-lg overflow-hidden">
                        <img 
                            src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=1200&h=500&fit=crop" 
                            alt="Ejes"
                            class="w-full h-full object-cover"
                        />
                    </div>

                </div>

                <!-- COLUMNA DERECHA: SIDEBAR (3/12) -->
                <aside class="lg:col-span-3">
                    <div class="sticky top-32 space-y-12">
                        
                        <!-- ESPECIALISTAS -->
                        <div>
                            <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-3 border-b border-gray-300">
                                Especialistas
                            </h3>
                            <div class="space-y-6">
                                {selectedSpecialists.map((member) => (
                                    <a 
                                        href={`/nosotros/equipo/${member.slug}`}
                                        class="group block hover:opacity-70 transition-opacity"
                                    >
                                        <div class="mb-3 h-40 bg-gray-100 rounded-lg flex items-center justify-center overflow-hidden">
                                            <img 
                                                src={member.image} 
                                                alt={member.name}
                                                class="h-full w-auto object-contain"
                                            />
                                        </div>
                                        <h4 class="font-bold text-sm text-gray-900 group-hover:text-primary transition-colors">
                                            {member.name}
                                        </h4>
                                        <p class="text-xs text-gray-600 mt-1 leading-tight">
                                            {member.role}
                                        </p>
                                    </a>
                                ))}
                            </div>
                        </div>

                        <!-- INDUSTRIAS -->
                        <div>
                            <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-3 border-b border-gray-300">
                                Industrias Relacionadas
                            </h3>
                            <div class="space-y-4">
                                {selectedIndustries.map((ind) => (
                                    <a 
                                        href={ind.link}
                                        class="group block hover:opacity-70 transition-opacity"
                                    >
                                        <div class="mb-2 h-24 bg-gray-100 rounded-lg overflow-hidden flex items-center justify-center">
                                            <img 
                                                src={ind.image} 
                                                alt={ind.title}
                                                class="w-full h-full object-cover"
                                            />
                                        </div>
                                        <h4 class="font-bold text-xs text-gray-900 group-hover:text-primary transition-colors">
                                            {ind.title}
                                        </h4>
                                    </a>
                                ))}
                            </div>
                        </div>

                    </div>
                </aside>

            </div>
        </div>
    </section>
</Layout>