---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';
import TeamCard from '../../components/TeamCard.astro';
import SidebarCard from '../../components/SidebarCard.astro';

// Importamos la data centralizada
import { teamMembers, industriesData } from '../../data/teamData';

// ========================================================================
// CONFIGURACIÓN DE LA PÁGINA: FORTALECIMIENTO DE CAPACIDADES
// ========================================================================

// 1. SELECCIONA ESPECIALISTAS (Sugeridos por el tema: Educación, Gestión Pública)
const selectedSpecialists = [
    teamMembers["elmer-huaman"], // Especialista en Inversión
    teamMembers["jorge-ruiz"],   // Especialista en Planes de Desarrollo
    teamMembers["karla-casas"]   // Jefe de Proyectos
];

// 2. SELECCIONA INDUSTRIAS RELACIONADAS
const selectedIndustries = [
    industriesData["educacion"],
    industriesData["infraestructura"]
];

// 3. IMAGEN DE CABECERA
const headerImage = "/capacidades/fortalecimiento.jpg"; 
---

<Layout title="Fortalecimiento de Capacidades - CCD">
    
    <PageHeader 
        title="Fortalecimiento de Capacidades y Capital Humano" 
        backgroundImage={headerImage}
    />

    <section class="bg-white py-16 md:py-24">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24">
                
                <!-- ============================================ -->
                <!-- COLUMNA IZQUIERDA: CONTENIDO (8/12)          -->
                <!-- ============================================ -->
                <div class="lg:col-span-8 space-y-16">
                    
                    <!-- SECCIÓN: Generación de Valor Cliente -->
                    <div>
                        <h3 class="font-serif text-3xl font-bold text-primary mb-8">
                            Generación de Valor Cliente
                        </h3>
                        
                        <!-- Intro destacada -->
                        <div class="bg-gradient-to-r from-primary/5 to-primary/10 p-8 rounded-xl mb-12 border-l-4 border-primary">
                            <p class="text-gray-800 text-lg font-medium leading-relaxed">
                                Fortalecemos <span class="font-bold text-primary">capacidades institucionales</span> y capital humano para impulsar desarrollo sostenible y competitivo.
                            </p>
                        </div>

                        <!-- Layout: Texto + Imagen alternado -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12 items-center">
                            <div>
                                <div class="flex items-start mb-4">
                                    <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary/10 text-primary font-bold text-lg flex-shrink-0">1</div>
                                    <h4 class="font-bold text-xl text-gray-900 ml-4">Viabilidad Político-Técnica</h4>
                                </div>
                                <p class="text-gray-700 text-base leading-relaxed ml-14">
                                    Creamos condiciones políticas y técnicas para que iniciativas de desarrollo sean posibles y sostenibles.
                                </p>
                            </div>
                            <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
                                <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=500&h=400&fit=crop" alt="Fortalecimiento" class="w-full h-full object-cover"/>
                            </div>
                        </div>

                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
                            <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center order-2 md:order-1">
                                <img src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=500&h=400&fit=crop" alt="Eficiencia" class="w-full h-full object-cover"/>
                            </div>
                            <div class="order-1 md:order-2">
                                <div class="flex items-start mb-4">
                                    <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary/10 text-primary font-bold text-lg flex-shrink-0">2</div>
                                    <h4 class="font-bold text-xl text-gray-900 ml-4">Eficiencia y Confianza</h4>
                                </div>
                                <p class="text-gray-700 text-base leading-relaxed ml-14">
                                    Generamos eficiencias y confianza entre actores públicos y privados para alinear esfuerzos hacia objetivos comunes.
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- SECCIÓN: Nuestro Trabajo -->
                    <div>
                        <h3 class="font-serif text-3xl font-bold text-primary mb-8">
                            Nuestro Trabajo
                        </h3>

                        <!-- Card A -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12 items-center bg-gray-50 p-8 rounded-xl">
                            <div>
                                <div class="flex items-start mb-4">
                                    <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary text-white font-bold text-lg flex-shrink-0">A</div>
                                    <h4 class="font-bold text-xl text-gray-900 ml-4">Capacitación Integral</h4>
                                </div>
                                <div class="ml-14">
                                    <ul class="space-y-2">
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Competitividad, productividad y desarrollo
                                        </li>
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Planeamiento para el desarrollo
                                        </li>
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Gestión de inversiones públicas
                                        </li>
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            APPs e iniciativas privadas
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
                                <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=500&h=400&fit=crop" alt="Capacitación" class="w-full h-full object-cover"/>
                            </div>
                        </div>

                        <!-- Card B -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center bg-gray-50 p-8 rounded-xl">
                            <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center order-2 md:order-1">
                                <img src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=500&h=400&fit=crop" alt="Administración" class="w-full h-full object-cover"/>
                            </div>
                            <div class="order-1 md:order-2">
                                <div class="flex items-start mb-4">
                                    <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary text-white font-bold text-lg flex-shrink-0">B</div>
                                    <h4 class="font-bold text-xl text-gray-900 ml-4">Administración Financiera</h4>
                                </div>
                                <div class="ml-14">
                                    <ul class="space-y-2">
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Presupuesto público e inversión
                                        </li>
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Compras públicas y abastecimiento
                                        </li>
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Tesorería y contabilidad
                                        </li>
                                        <li class="flex items-center text-gray-700">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Integridad institucional
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

                <!-- ============================================ -->
                <!-- COLUMNA DERECHA: SIDEBAR (4/12)              -->
                <!-- ============================================ -->
                <aside class="lg:col-span-4 space-y-12">
                    <div class="sticky top-32">
                        <!-- Especialistas -->
                        <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-2 border-b border-gray-200">
                            Expertos en Fortalecimiento de Capacidades
                        </h3>
                        <div class="space-y-6 mb-12">
                            {selectedSpecialists.map((member) => (
                                <TeamCard 
                                    name={member.name}
                                    role={member.role}
                                    image={member.image}
                                    link={`/nosotros/equipo/${member.slug}`}
                                />
                            ))}
                        </div>

                        <!-- Industrias Relacionadas -->
                        <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-2 border-b border-gray-200">
                            Industrias Relacionadas
                        </h3>
                        <div class="space-y-4">
                            {selectedIndustries.map((ind) => (
                                <SidebarCard 
                                    title={ind.title} 
                                    image={ind.image} 
                                    link={ind.link} 
                                />
                            ))}
                        </div>
                    </div>
                </aside>

            </div>
        </div>
    </section>

</Layout>