---
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';
import TeamCard from '../../components/TeamCard.astro';
import SidebarCard from '../../components/SidebarCard.astro';

// Importamos la data centralizada
import { teamMembers, industriesData } from '../../data/teamData';

// ========================================================================
// CONFIGURACIÓN DE LA PÁGINA: FORTALECIMIENTO DE CAPACIDADES
// ========================================================================

// 1. SELECCIONA ESPECIALISTAS (Sugeridos por el tema: Educación, Gestión Pública)
const selectedSpecialists = [
    teamMembers["elmer-huaman"], // Especialista en Inversión
    teamMembers["jorge-ruiz"],   // Especialista en Planes de Desarrollo
    teamMembers["karla-casas"]   // Jefe de Proyectos
];

// 2. SELECCIONA INDUSTRIAS RELACIONADAS
const selectedIndustries = [
    industriesData["educacion"],
    industriesData["infraestructura"]
];

// 3. IMAGEN DE CABECERA
const headerImage = "/capacidades/fortalecimiento.jpg"; 
---

<Layout title="Fortalecimiento de Capacidades - CCD">
    
    <PageHeader 
        title="Fortalecimiento de Capacidades y Capital Humano" 
        backgroundImage={headerImage}
    />

    <section class="bg-white py-16 md:py-24">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24">
                
                <!-- ============================================ -->
                <!-- COLUMNA IZQUIERDA: CONTENIDO (8/12)          -->
                <!-- ============================================ -->
                <div class="lg:col-span-8 space-y-16">
                    
                    <!-- SECCIÓN: Generación de Valor Cliente -->
                    <div>
                        <h3 class="font-serif text-3xl font-bold text-primary mb-6 border-b-2 border-gray-100 pb-2">
                            Generación de Valor Cliente
                        </h3>
                        
                        

                        <!-- Lista de puntos del PDF -->
                        <ul class="space-y-6">
                            <li class="flex items-start text-gray-700 text-lg leading-relaxed">
                                <span class="bg-primary h-2 w-2 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                <span>Viabilizar componentes político y técnico para el desarrollo.</span>
                            </li>
                            <li class="flex items-start text-gray-700 text-lg leading-relaxed">
                                <span class="bg-primary h-2 w-2 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                <span>Lograr acuerdos para el desarrollo.</span>
                            </li>
                            <li class="flex items-start text-gray-700 text-lg leading-relaxed">
                                <span class="bg-primary h-2 w-2 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                <span>Generación de confianza.</span>
                            </li>
                            <li class="flex items-start text-gray-700 text-lg leading-relaxed">
                                <span class="bg-primary h-2 w-2 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                <span>Mayor articulación e integración con los actores claves del desarrollo.</span>
                            </li>
                            <li class="flex items-start text-gray-700 text-lg leading-relaxed">
                                <span class="bg-primary h-2 w-2 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                <span>Generación de eficiencias internas y externas.</span>
                            </li>
                            <li class="flex items-start text-gray-700 text-lg leading-relaxed">
                                <span class="bg-primary h-2 w-2 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                <span>Cofinanciamiento público y privado y escalamiento de programas y proyectos sociales para el desarrollo.</span>
                            </li>
                            <li class="flex items-start text-gray-700 text-lg leading-relaxed">
                                <span class="bg-primary h-2 w-2 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                <span>Aceleración y aumento de la calidad de la inversión.</span>
                            </li>
                            <li class="flex items-start text-gray-700 text-lg leading-relaxed">
                                <span class="bg-primary h-2 w-2 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                <span>Potenciación de la inversión pública y privada para el desarrollo.</span>
                            </li>
                        </ul>
                    </div>

                    <!-- SECCIÓN: Nuestro Trabajo -->
                    <div>
                        <h3 class="font-serif text-3xl font-bold text-primary mb-8 border-b-2 border-gray-100 pb-2">
                            Nuestro Trabajo
                        </h3>
                        
                        <ul class="space-y-6">
                            
                            
                            <!-- Item 2 (Con Sub-lista) -->
                            <li class="flex flex-col text-gray-700 text-lg leading-relaxed">
                                <div class="flex items-start">
                                    <span class="bg-primary h-2 w-2 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                    <span>Fortalecimiento de capacidades a colaboradores y funcionarios de las instituciones públicas y privadas para el desarrollo nacional, regional, local y comunal.</span>
                                </div>
                                <div class="bg-gray-50 rounded-xl p-6 ml-6 mt-4">
                                    <ul class="grid md:grid-cols-2 gap-y-3 gap-x-6">
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Determinantes de la competitividad, productividad y desarrollo</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Planeamiento para el desarrollo</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Articulación y complementariedad de los instrumentos de planeamiento y gestión para el desarrollo</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Inversión pública: Invierte.pe, Programación Multianual de Inversiones y Gestión de Inversiones</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Obras por Impuestos</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Asociaciones Público Privado: APPs</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Iniciativas Privadas</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Fondos sociales para el desarrollo</li>
                                        

                                    </ul>
                                </div>
                            </li>

                            <li class="flex flex-col text-gray-700 text-lg leading-relaxed">
                                <div class="flex items-start">
                                    <span class="bg-primary h-2 w-2 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                    <span>Administración Financiera del Sector Público</span>
                                </div>
                                <div class="bg-gray-50 rounded-xl p-6 ml-6 mt-4">
                                    <ul class="grid md:grid-cols-2 gap-y-3 gap-x-6">
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Programación Multianual y Gestión de Inversiones: Invierte.pe</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Presupuesto Público</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Abastecimiento: compras públicas</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Tesorería</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Endeudamiento Público</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Contabilidad</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Ingresos y Rentas</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Gestión Fiscal de los Recursos Humanos en el Sector Público</li>
                                        <li class="flex items-center text-gray-700"><span class="text-primary mr-2">✓</span> Integridad institucional</li>
                                        

                                    </ul>
                                </div>
                            </li>

                            <li class="flex items-start text-gray-700 text-lg leading-relaxed">
                                <span class="bg-primary h-2 w-2 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                <span>Fortalecimiento de capacidades bajo las modalidades presencial, virtual y semipresencial.</span>
                            </li>

                            <li class="flex items-start text-gray-700 text-lg leading-relaxed">
                                <span class="bg-primary h-2 w-2 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                <span>Fortalecimiento de capacidades en desarrollo y proceso de cierre de brechas económicas y sociales a líderes y actores claves.</span>
                            </li>

                            <li class="flex items-start text-gray-700 text-lg leading-relaxed">
                                <span class="bg-primary h-2 w-2 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                <span>Diseño y creación de plataformas y campus fisco y/o virtual para el fortalecimiento de capacidades para planeamiento y gestión del desarrollo.</span>
                            </li>

                            <li class="flex items-start text-gray-700 text-lg leading-relaxed">
                                <span class="bg-primary h-2 w-2 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                <span>Retroalimentación de mejores experiencias con los mejores gestores de inversión a nivel nacional.</span>
                            </li>
                        </ul>
                    </div>

                </div>

                <!-- ============================================ -->
                <!-- COLUMNA DERECHA: SIDEBAR (4/12)              -->
                <!-- ============================================ -->
                <aside class="lg:col-span-4 space-y-12">
                    <div class="sticky top-32">
                        <!-- Especialistas -->
                        <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-2 border-b border-gray-200">
                            Expertos en Fortalecimiento de Capacidades
                        </h3>
                        <div class="space-y-6 mb-12">
                            {selectedSpecialists.map((member) => (
                                <TeamCard 
                                    name={member.name}
                                    role={member.role}
                                    image={member.image}
                                    link={`/nosotros/equipo/${member.slug}`}
                                />
                            ))}
                        </div>

                        <!-- Industrias Relacionadas -->
                        <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-2 border-b border-gray-200">
                            Industrias Relacionadas
                        </h3>
                        <div class="space-y-4">
                            {selectedIndustries.map((ind) => (
                                <SidebarCard 
                                    title={ind.title} 
                                    image={ind.image} 
                                    link={ind.link} 
                                />
                            ))}
                        </div>
                    </div>
                </aside>

            </div>
        </div>
    </section>

</Layout>