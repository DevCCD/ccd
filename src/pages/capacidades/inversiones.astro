---
import Layout from "../../layouts/Layout.astro";
import PageHeader from "../../components/PageHeader.astro";
import ValueGenerationHero from "../../components/capacidades/ValueGenerationHero.astro";
import BentoGrid from "../../components/capacidades/BentoGrid.astro";
import CapabilitySidebar from "../../components/capacidades/CapabilitySidebar.astro";

// Importamos nuestra "base de datos"
import { teamMembers, industriesData } from "../../data/teamData";

const selectedSpecialists = [teamMembers["sergio-villegas"]];

const selectedIndustries = [
    industriesData["agricultura"],
    industriesData["infraestructura"],
];

// Bento Grid Items for Generación de Valor Cliente
const valueGenerationItems = [
    {
        text: "Estudios sólidos que fundamentan decisiones de inversión y aseguran viabilidad técnica, ambiental y financiera.",
        image: "/capacidades/inversiones y proyectos/anta.png",
        imageAlt: "Estudios de Inversión",
        size: "large" as const,
    },
    {
        text: "Implementación eficiente que ejecuta proyectos dentro de presupuesto, cronograma y con la calidad mundial esperada.",
        image: "/capacidades/inversiones y proyectos/exportaciones.jpg",
        imageAlt: "Implementación",
        size: "small" as const,
    },
    {
        text: "Impacto transformador que genera cambios sostenibles en la vida de las personas y sus comunidades cercanas.",
        image: "/capacidades/inversiones y proyectos/Quinua en Puno.jpg",
        imageAlt: "Impacto Transformador",
        size: "large" as const,
    },
    {
        text: "Gestión de corredores que integra inversiones estratégicas en infraestructura, producción y conectividad regional.",
        image: "/capacidades/inversiones y proyectos/000619362W.jpg",
        imageAlt: "Gestión de Corredores",
        size: "small" as const,
    },
    {
        text: "Planes estratégicos que alinean las inversiones con metas claras de desarrollo regional y competitividad nacional.",
        image: "/capacidades/inversiones y proyectos/001070146W.jpg",
        imageAlt: "Planes Estratégicos",
        size: "wide" as const,
    },
];

// Bento Grid Items for Nuestro Trabajo
const ourWorkItems = [
    {
        text: "Elaboramos estudios de pre-inversión para identificar oportunidades con el máximo potencial de impacto.",
        image: "/capacidades/inversiones y proyectos/inversiones.jpg",
        imageAlt: "Estudios",
        size: "small" as const,
    },
    {
        text: "Gestionamos la ejecución de proyectos desde su diseño inicial hasta la puesta en marcha operativa.",
        image: "/capacidades/inversiones y proyectos/desarrollo 1.jpg",
        imageAlt: "Gestión",
        size: "medium" as const,
    },
    {
        text: "Promovemos alianzas público-privadas que potencian recursos y amplían el alcance de las inversiones.",
        image: "/capacidades/inversiones y proyectos/inversiones2.jpg",
        imageAlt: "Alianzas",
        size: "medium" as const,
    },
];

const headerImage = "/capacidades/inversiones.jpg";
---

<Layout title="Inversiones y Proyectos de Desarrollo - CCD">
    <PageHeader
        title="Inversiones y Proyectos de Desarrollo"
        backgroundImage={headerImage}
    />

    <section class="bg-white">
        <div class="container mx-auto px-6 lg:px-12 py-16 md:py-24">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-16">
                <!-- CONTENIDO PRINCIPAL (9 columnas) -->
                <div class="lg:col-span-9 space-y-24">
                    <!-- SECCIÓN 1: GENERACIÓN DE VALOR CLIENTE -->
                    <div class="space-y-12">
                        <ValueGenerationHero
                            title="Generación de Valor Cliente"
                            description="Diseñamos y gestionamos inversiones y proyectos que permiten reducir y cerrar brechas críticas, generando un desarrollo real y mejorando la calidad de vida de la población."
                        />

                        <BentoGrid items={valueGenerationItems} />
                    </div>

                    <!-- SECCIÓN 2: NUESTRO TRABAJO -->
                    <div class="space-y-12 pt-12 border-t border-gray-200">
                        <div class="text-center md:text-left">
                            <h2
                                class="font-serif text-4xl md:text-5xl font-bold text-gray-900 mb-6"
                            >
                                Nuestro Trabajo
                            </h2>
                        </div>

                        <BentoGrid items={ourWorkItems} />

                        <!-- Tipos de Inversión -->
                        <div
                            class="bg-gradient-to-br from-gray-50 to-white rounded-3xl p-8 md:p-12 border border-gray-200 shadow-sm"
                        >
                            <h4
                                class="font-serif text-2xl font-bold text-gray-900 mb-8 pb-4 border-b border-gray-200"
                            >
                                Tipos de Inversión
                            </h4>
                            <ul
                                class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-x-8 gap-y-5"
                            >
                                {
                                    [
                                        "Infraestructura",
                                        "Capital Humano",
                                        "Productividad",
                                        "Ambiente",
                                        "Tecnología",
                                        "Conectividad",
                                        "Gobernanza",
                                        "Servicios Sociales",
                                    ].map((item) => (
                                        <li class="flex items-start group">
                                            <span class="w-2 h-2 rounded-full bg-primary mt-2 mr-3 flex-shrink-0 group-hover:scale-150 transition-transform" />
                                            <span class="text-gray-700 font-medium text-base group-hover:text-primary transition-colors">
                                                {item}
                                            </span>
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>

                        <!-- Siguiente Capacidad -->
                        <div class="pt-12">
                            <a
                                href="/capacidades/competitividad"
                                class="group flex items-center justify-between p-8 rounded-2xl bg-gray-50 border border-gray-100 hover:border-primary/30 transition-all"
                            >
                                <div>
                                    <span
                                        class="text-sm font-bold text-primary uppercase tracking-widest"
                                        >Siguiente Capacidad</span
                                    >
                                    <h4
                                        class="text-2xl font-serif font-bold text-gray-900 mt-2"
                                    >
                                        Competitividad
                                    </h4>
                                </div>
                                <div
                                    class="w-12 h-12 rounded-full bg-white border border-gray-200 flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-all"
                                >
                                    <svg
                                        xmlns="http://www.w3.org/2000/svg"
                                        class="h-6 w-6"
                                        fill="none"
                                        viewBox="0 0 24 24"
                                        stroke="currentColor"
                                    >
                                        <path
                                            stroke-linecap="round"
                                            stroke-linejoin="round"
                                            stroke-width="2"
                                            d="M9 5l7 7-7 7"></path>
                                    </svg>
                                </div>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- COLUMNA DERECHA: SIDEBAR (3/12) -->
                <CapabilitySidebar
                    specialists={selectedSpecialists}
                    industries={selectedIndustries}
                />
            </div>
        </div>
    </section>
</Layout>
