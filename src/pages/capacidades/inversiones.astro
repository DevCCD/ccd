---
// DEPRECATED: This file has been renamed to inversion.astro
// Please use /capacidades/inversion instead
import Layout from '../../layouts/Layout.astro';
import PageHeader from '../../components/PageHeader.astro';
import TeamCard from '../../components/TeamCard.astro';
import SidebarCard from '../../components/SidebarCard.astro';

// Importamos la data centralizada
import { teamMembers, industriesData } from '../../data/teamData';

// ========================================================================
// CONFIGURACIÓN DE LA PÁGINA: INVERSIONES Y PROYECTOS
// ========================================================================

// 1. SELECCIONA ESPECIALISTAS (Expertos en Inversión Pública y Privada)
const selectedSpecialists = [
    teamMembers["sergio-villegas"]
];

// 2. SELECCIONA INDUSTRIAS RELACIONADAS
const selectedIndustries = [
    industriesData["agricultura"],
    industriesData["infraestructura"]
 
];

// 3. IMAGEN DE CABECERA
const headerImage = "/capacidades/inversiones.jpg"; 
---

<Layout title="Inversiones y Proyectos - CCD">
    
    <PageHeader 
        title="Inversiones y Proyectos" 
        backgroundImage={headerImage}
    />

    <section class="bg-white py-16 md:py-24">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24">
                
                <!-- ============================================ -->
                <!-- COLUMNA IZQUIERDA: CONTENIDO (8/12)          -->
                <!-- ============================================ -->
                <div class="lg:col-span-8 space-y-16">
                    
                    <!-- 1. GENERACIÓN DE VALOR CLIENTE -->
                    <div class="bg-blue-50 p-8 rounded-xl border-l-8 border-primary shadow-sm">
                        <h3 class="font-serif text-2xl font-bold text-gray-900 mb-6">
                            Generación de Valor Cliente
                        </h3>
                        
                        <ul class="space-y-4">
                            <li class="flex items-start text-gray-700 text-lg leading-relaxed">
                                <span class="bg-primary h-2.5 w-2.5 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                <span>Inversiones y proyectos permiten reducir y cerrar brechas, desarrollo y mejoran calidad de vida de la población.</span>
                            </li>
                            <li class="flex items-start text-gray-700 text-lg leading-relaxed">
                                <span class="bg-primary h-2.5 w-2.5 rounded-full mt-2.5 mr-4 flex-shrink-0"></span>
                                <span>Desarrollo y prosperidad para todos.</span>
                            </li>
                        </ul>
                    </div>

                    <!-- 2. NUESTRO TRABAJO -->
                    <div>
                        <h3 class="font-serif text-3xl font-bold text-primary mb-8">
                            Nuestro Trabajo
                        </h3>
                        
                        <!-- Card A: Estudios -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12 items-center bg-gray-50 p-8 rounded-xl">
                            <div>
                                <div class="flex items-start mb-4">
                                    <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary text-white font-bold text-lg flex-shrink-0">A</div>
                                    <h4 class="font-bold text-xl text-gray-900 ml-4">Estudios de Inversión</h4>
                                </div>
                                <div class="ml-14 text-sm space-y-3">
                                    <div>
                                        <p class="font-bold text-primary mb-1">Tipo:</p>
                                        <p class="text-gray-700">Preinversión, expedientes técnicos, factibilidad</p>
                                    </div>
                                    <div>
                                        <p class="font-bold text-primary mb-1">Tamaño:</p>
                                        <p class="text-gray-700">Mega, grande, mediano y pequeño</p>
                                    </div>
                                    <div>
                                        <p class="font-bold text-primary mb-1">Sectores:</p>
                                        <p class="text-gray-700">Educación, salud, saneamiento, productivos y más</p>
                                    </div>
                                </div>
                            </div>
                            <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
                                <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=500&h=400&fit=crop" alt="Estudios" class="w-full h-full object-cover"/>
                            </div>
                        </div>

                        <!-- Card B: Programas y Capacitación -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12 items-center bg-gray-50 p-8 rounded-xl">
                            <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center order-2 md:order-1">
                                <img src="https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?w=500&h=400&fit=crop" alt="Programas" class="w-full h-full object-cover"/>
                            </div>
                            <div class="order-1 md:order-2">
                                <div class="flex items-start mb-4">
                                    <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary text-white font-bold text-lg flex-shrink-0">B</div>
                                    <h4 class="font-bold text-xl text-gray-900 ml-4">Programas y Capacitación</h4>
                                </div>
                                <div class="ml-14">
                                    <ul class="space-y-2">
                                        <li class="flex items-center text-gray-700 text-sm">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            PMI (Programas Multianuales)
                                        </li>
                                        <li class="flex items-center text-gray-700 text-sm">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Asistencia técnica integral
                                        </li>
                                        <li class="flex items-center text-gray-700 text-sm">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Fortalecer capacidades
                                        </li>
                                        <li class="flex items-center text-gray-700 text-sm">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            OxI, APPs, iniciativas privadas
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <!-- Card C: Proyectos Innovadores -->
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center bg-gray-50 p-8 rounded-xl">
                            <div>
                                <div class="flex items-start mb-4">
                                    <div class="flex items-center justify-center h-10 w-10 rounded-full bg-primary text-white font-bold text-lg flex-shrink-0">C</div>
                                    <h4 class="font-bold text-xl text-gray-900 ml-4">Innovación y Desarrollo</h4>
                                </div>
                                <div class="ml-14">
                                    <ul class="space-y-2">
                                        <li class="flex items-center text-gray-700 text-sm">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Proyectos innovadores
                                        </li>
                                        <li class="flex items-center text-gray-700 text-sm">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Todas las dimensiones del desarrollo
                                        </li>
                                        <li class="flex items-center text-gray-700 text-sm">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Competitividad
                                        </li>
                                        <li class="flex items-center text-gray-700 text-sm">
                                            <svg class="h-4 w-4 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
                                            Asesoría en modalidades
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <div class="rounded-lg overflow-hidden shadow-lg h-64 bg-gradient-to-br from-primary/20 to-primary/5 flex items-center justify-center">
                                <img src="https://images.unsplash.com/photo-1552664730-d307ca884978?w=500&h=400&fit=crop" alt="Innovación" class="w-full h-full object-cover"/>
                            </div>
                        </div>
                    </div>

                    <!-- SIN CTA (Call to Action eliminado) -->

                </div>

                <!-- ============================================ -->
                <!-- COLUMNA DERECHA: SIDEBAR (4/12)              -->
                <!-- ============================================ -->
                <aside class="lg:col-span-4 space-y-12">
                    <div class="sticky top-32">
                        <!-- Especialistas -->
                        <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-2 border-b border-gray-200">
                            Expertos en Inversión
                        </h3>
                        <div class="space-y-6 mb-12">
                            {selectedSpecialists.map((member) => (
                                <TeamCard 
                                    name={member.name}
                                    role={member.role}
                                    image={member.image}
                                    link={`/nosotros/equipo/${member.slug}`}
                                />
                            ))}
                        </div>

                        <!-- Industrias Relacionadas -->
                        <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-2 border-b border-gray-200">
                            Industrias Relacionadas
                        </h3>
                        <div class="space-y-4">
                            {selectedIndustries.map((ind) => (
                                ind ? (
                                    <SidebarCard 
                                        title={ind.title} 
                                        image={ind.image} 
                                        link={ind.link} 
                                    />
                                ) : null
                            ))}
                        </div>
                    </div>
                </aside>

            </div>
        </div>
    </section>

</Layout>