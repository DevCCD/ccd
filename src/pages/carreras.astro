                <div class="text-center mb-12">
                    <h2 class="font-serif text-4xl md:text-5xl font-bold text-primary mb-4">
                        Envía tu CV
                    </h2>
                    <p class="text-gray-600 text-xl">
Únete a nosotros y vive la experiencia y la pasión por el desarrollo
                    </p>
                </div>

                <form class="space-y-6 bg-white p-8 md:p-12 rounded-xl shadow-lg" id="careerForm">
                    <!-- Nombre Completo -->
                    <div>
                        <label for="nombre" class="block text-sm font-semibold text-gray-700 mb-2">
                            Nombre *
                        </label>
                        <input 
                            type="text" 
                            id="nombre" 
                            name="nombre" 
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all"
                            placeholder="Tu nombre completo"
                        />
                    </div>

                    <!-- Email -->
                    <div>
                        <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">
                            Correo *
                        </label>
                        <input 
                            type="email" 
                            id="email" 
                            name="email" 
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all"
                            placeholder="tu@email.com"
                        />
                    </div>

                    <!-- Teléfono -->
                    <div>
                        <label for="telefono" class="block text-sm font-semibold text-gray-700 mb-2">
                            Celular *
                        </label>
                        <input 
                            type="tel" 
                            id="telefono" 
                            name="telefono"
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all"
                            placeholder="+51 9 XXXX XXXX"
                        />
                    </div>

                    <!-- País -->
                    <div>
                        <label for="pais" class="block text-sm font-semibold text-gray-700 mb-2">
                            País *
                        </label>
                        <select 
                            id="pais" 
                            name="pais"
                            required
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all"
                        >
                            <option value="">Selecciona un país</option>
                            {countries.map(country => (
                                <option value={country.name}>{country.name}</option>
                            ))}
                        </select>
                    </div>

                    <!-- Provincia (Solo visible si es Perú) -->
                    <div id="provinceContainer" class="hidden">
                        <label for="provincia" class="block text-sm font-semibold text-gray-700 mb-2">
                            Provincia *
                        </label>
                        <select 
                            id="provincia" 
                            name="provincia"
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent outline-none transition-all"
                        >
                            <option value="">Selecciona una provincia</option>
                            {countries.find(c => c.name === "Perú")?.provinces.map(province => (
                                <option value={province}>{province}</option>
                            ))}
                        </select>
                    </div>

                    <!-- Archivo CV -->
                    <div>
                        <label for="cv" class="block text-sm font-semibold text-gray-700 mb-2">
                            Adjuntar CV *
                        </label>
                        <div class="mt-2 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:border-primary transition-colors duration-300">
                            <div class="space-y-1 text-center">
                                <svg class="mx-auto h-12 w-12 text-gray-400" stroke="white" fill="none" viewBox="0 0 48 48">
                                    <path d="M28 8H12a4 4 0 00-4 4v20a4 4 0 004 4h24a4 4 0 004-4V20m-2-6l-8.5-8.5m0 0L28 2m0 4v16" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
                                </svg>
                                <div class="flex text-sm text-gray-600">
                                    <label for="cv" class="relative cursor-pointer rounded-md font-medium text-primary hover:text-primary-dark">
                                        <span>Selecciona un archivo</span>
                                        <input 
                                            id="cv" 
                                            name="cv" 
                                            type="file" 
                                            accept=".pdf,.doc,.docx"
                                            required
                                            class="sr-only"
                                        />
                                    </label>
                                </div>
                                <p class="text-xs text-gray-500">PDF, DOC o DOCX hasta 10MB</p>
                            </div>
                        </div>
                        <p id="fileName" class="text-sm text-gray-600 mt-2"></p>
                    </div>

                    <!-- Términos y Condiciones -->
                    <div class="flex items-start">
                        <div class="flex items-center h-5">
                            <input 
                                id="terminos" 
                                name="terminos" 
                                type="checkbox"
                                required
                                class="h-4 w-4 text-primary rounded focus:ring-primary border-gray-300"
                            />
                        </div>
                        <label for="terminos" class="ml-3 text-sm text-gray-600">
                            Acepto que mis datos sean procesados para evaluar mi candidatura *
                        </label>
                    </div>

                    <!-- Botón Enviar -->
                    <button 
                        type="submit" 
                        class="w-full bg-primary text-white font-bold py-3 px-6 rounded-lg hover:bg-primary-dark transition-colors duration-300"
                    >
                        Enviar CV
                    </button>
                </form>
            </div>
        </div>
    </section>

</Layout>

<script define:vars={{ countries }}>
    // Manejo del campo de país y provincia
    const countrySelect = document.getElementById('pais');
    const provinceContainer = document.getElementById('provinceContainer');
    const provinceSelect = document.getElementById('provincia');

    countrySelect.addEventListener('change', function() {
        if (this.value === 'Perú') {
            provinceContainer.classList.remove('hidden');
            provinceSelect.required = true;
        } else {
            provinceContainer.classList.add('hidden');
            provinceSelect.required = false;
            provinceSelect.value = '';
        }
    });

    // Manejo de archivo CV
    const cvInput = document.getElementById('cv');
    const fileName = document.getElementById('fileName');

    cvInput.addEventListener('change', function() {
        if (this.files && this.files[0]) {
            const file = this.files[0];
            fileName.textContent = `Archivo seleccionado: ${file.name} (${(file.size / 1024 / 1024).toFixed(2)}MB)`;
        }
    });

    // Validación de tamaño de archivo
    cvInput.addEventListener('change', function() {
        const maxSize = 10 * 1024 * 1024; // 10MB
        if (this.files && this.files[0] && this.files[0].size > maxSize) {
            alert('El archivo es muy grande. Por favor sube un archivo menor a 10MB');
            this.value = '';
            fileName.textContent = '';
        }
    });

    // Manejo del formulario
    const form = document.getElementById('careerForm');
    form.addEventListener('submit', function(e) {
        e.preventDefault();
        alert('Gracias por tu candidatura. Nos pondremos en contacto pronto.');
        this.reset();
        fileName.textContent = '';
    });
</script>
