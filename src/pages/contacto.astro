---
import Layout from '../layouts/Layout.astro';
import PageHeader from '../components/PageHeader.astro';

const headerImage = "https://images.unsplash.com/photo-1587560699334-cc4ff634909a?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D";
---

<Layout title="Contacto - Centro para la Competitividad y el Desarrollo">
    
    <PageHeader 
        title="Ponte en Contacto con Nosotros" 
        backgroundImage={headerImage}
    />

    <!-- SECCIÓN: INFORMACIÓN DE CONTACTO Y FORMULARIO -->
    <section class="bg-white py-16 md:py-24">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 md:gap-16 mb-16">
                
                <!-- COLUMNA IZQUIERDA: INFORMACIÓN DE CONTACTO -->
                <div class="space-y-10">
                    <div>
                        <h2 class="font-serif text-4xl md:text-5xl font-bold text-primary mb-4">
                            Información de Contacto
                        </h2>
                        <p class="text-gray-600 text-lg">
                            Contáctanos por estos medios.
                        </p>
                    </div>

                    <!-- Información de Contacto: Teléfono -->
                    <div class="flex items-start gap-4">
                        <div class="flex-shrink-0">
                            <div class="flex items-center justify-center h-16 w-16 rounded-md bg-primary text-white">
                                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                </svg>
                            </div>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-gray-900 mb-2">Teléfono</h3>
                            <p class="text-gray-600 text-lg">+51 922 753 771</p>
                        </div>
                    </div>

                    <!-- Información de Contacto: Email -->
                    <div class="flex items-start gap-4">
                        <div class="flex-shrink-0">
                            <div class="flex items-center justify-center h-16 w-16 rounded-md bg-primary text-white">
                                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                </svg>
                            </div>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-gray-900 mb-2">Email</h3>
                            <p class="text-gray-600 text-lg"><a href="mailto:administracion@competitividadccd.com" class="hover:text-primary transition-colors">administracion@competitividadccd.com</a></p>
                            
                        </div>
                    </div>

                    <!-- Información de Contacto: Dirección -->
                    <div class="flex items-start gap-4">
                        <div class="flex-shrink-0">
                            <div class="flex items-center justify-center h-16 w-16 rounded-md bg-primary text-white">
                                <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                </svg>
                            </div>
                        </div>
                        <div>
                            <h3 class="text-xl font-bold text-gray-900 mb-2">Ubicación</h3>
                            <p class="text-gray-600 text-lg">Calle German Schreiber 276</p>
                            <p class="text-gray-600 text-lg">Lima - Perú</p>
                        </div>
                    </div>

                    <!-- Redes Sociales -->
                    <div class="pt-8 border-t border-gray-200">
                        <h3 class="text-xl font-bold text-gray-900 mb-6">Síguenos en Redes Sociales</h3>
                        <div class="flex gap-4 flex-wrap">
                            <!-- Facebook -->
                            <a href="#" class="flex items-center justify-center w-16 h-16 rounded-lg bg-primary text-white hover:scale-110 hover:shadow-lg transition-all duration-300">
