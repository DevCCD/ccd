---
import Layout from '../layouts/Layout.astro';
import TeamCard from '../components/TeamCard.astro';

// Importamos los datos centralizados
import { teamMembers } from '../data/teamData';

// Datos de las 7 capacidades
const capacidades = [
    { title: "Competitividad", slug: "competitividad", image: "/capacidades/competitividad.jpg" },
    { title: "Desarrollo", slug: "desarrollo", image: "/capacidades/desarrollo.jpg" },
    { title: "Fortalecimiento de Capacidades y Capital Humano", slug: "fortalecimiento", image: "/capacidades/fortalecimiento.jpg" },
    { title: "Fondos de Desarrollo", slug: "fondos", image: "/capacidades/fondos.jpg" },
    { title: "Evaluación de Programas y Proyectos", slug: "evaluacion", image: "/capacidades/evaluacion.jpg" },
    { title: "Corredores Económicos Territoriales", slug: "corredores", image: "/capacidades/corredores.jpg" },
    { title: "Inversión y Proyectos", slug: "inversion", image: "/capacidades/inversiones.jpg" }
];

// Directores principales
const directores = [
    teamMembers["rudy-laguna"],
    teamMembers["viviana-sanchez"],
    teamMembers["alvaro-gordillo"]
];

---

<Layout title="Inicio - CCD">

    <section class="flex items-center bg-gradient-to-b from-white to-secondary-dark/25 pt-0 pb-12 sm:pt-0 sm:pb-0">
    

        <div class="container mx-auto px-6 flex flex-col-reverse md:grid md:grid-cols-2 gap-8 md:gap-12 items-center">
            <!-- Columna de Texto -->
            <div class="text-center md:text-left">
                <!-- CORRECCIÓN 4: Salto de Línea en el Título -->
                <!-- Añadimos una etiqueta <br /> justo después de "de" para forzar el salto de línea. -->
                <h1 id="hero-title" class="font-serif text-4xl sm:text-5xl md:text-6xl font-bold text-primary leading-tight">
                    El Futuro de <br class="hidden md:block" /> las Comunidades
                </h1>
                <p id="hero-subtitle" class="mt-10 font-sans text-lg md:text-2xl text-gray-700 max-w-lg mx-auto md:mx-0">
                    Cada vez son más las comunidades que priorizan la conectividad económica, física y vital.
                </p>
                <a id="hero-button" href="/contacto" class="mt-10 inline-block bg-primary text-white font-bold py-4 px-8 rounded-lg hover:bg-primary-dark transition-colors">
                    Contáctanos
                </a>
            </div>

            <!-- Columna de Imagen -->
            <!-- NOTA: Reemplaza 'hero-image.png' con el nombre de tu archivo de imagen real. -->
            <!-- Asegúrate de colocar tu imagen en la carpeta `public/`. -->
            <div id="hero-image" class="w-full max-w-md md:max-w-full mx-auto">
                <img src="/hero-image.png" alt="Ilustración de una comunidad conectada" class="w-11/12 mx-auto h-auto">
            </div>
        </div>
    </section>

    <!-- SECCIÓN: CAPACIDADES - DISEÑO MODERNO -->
    <section class="bg-white py-16 md:py-32">
        <div class="container mx-auto px-6">
            <div class="text-center mb-20">
                <h2 class="font-serif text-5xl md:text-6xl font-bold text-primary mb-6">
                    Nuestras Capacidades
                </h2>
                <p class="text-gray-600 text-lg md:text-xl max-w-3xl mx-auto leading-relaxed">
                    Soluciones especializadas en competitividad, desarrollo y transformación territorial para impulsar el progreso sostenible.
                </p>
            </div>

            <!-- Grid de Capacidades con layout alternado -->
            <div class="space-y-24">
                {capacidades.map((cap, index) => (
                    <a href={`/capacidades/${cap.slug}`} class="group block">
                        <div class={`grid grid-cols-1 md:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? 'md:grid-flow-dense' : ''}`}>
                            <!-- Imagen -->
                            <div class={`${index % 2 === 1 ? 'md:order-2' : ''}`}>
                                <div class="relative overflow-hidden rounded-xl shadow-2xl hover:shadow-3xl transition-all duration-500 h-80 md:h-96">
                                    <img 
                                        src={cap.image} 
                                        alt={cap.title}
                                        class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                                    />
                                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors duration-500"></div>
                                </div>
                            </div>

                            <!-- Contenido -->
                            <div class={`${index % 2 === 1 ? 'md:order-1' : ''} flex flex-col justify-center`}>
                                <div class="space-y-6">
                                    <!-- Número -->
                                    <div class="flex items-center gap-4">
                                        <span class="text-6xl md:text-5xl font-bold text-primary/40">{(index + 1).toString().padStart(2, '0')}</span>
                                        <div class="flex-1 h-1 bg-gradient-to-r from-primary to-transparent"></div>
                                    </div>

                                    <!-- Título -->
                                    <h3 class="font-serif text-3xl md:text-6xl font-bold text-gray-900 leading-tight group-hover:text-primary transition-colors duration-300">
                                        {cap.title}
                                    </h3>

                                    <!-- Botón/Link -->
                                    <div class="inline-flex items-center gap-3 text-primary font-semibold text-lg group-hover:gap-6 transition-all duration-300">
                                        <span>Explorar</span>
                                        <svg class="w-6 h-6 group-hover:translate-x-2 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path></svg>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </a>
                ))}
            </div>
        </div>
    </section>

    <!-- SECCIÓN: EQUIPO PRINCIPAL -->
    <section class="bg-gray-50 py-16 md:py-24">
        <div class="container mx-auto px-6">
            <h2 class="font-serif text-4xl md:text-5xl font-bold text-primary text-center mb-4">
                Nuestro Equipo
            </h2>
            <p class="text-center text-gray-600 text-lg max-w-2xl mx-auto mb-16">
                Líderes y especialistas con experiencia en desarrollo territorial, inversión y competitividad regional.
            </p>

            <!-- Grid de Equipo: 3 columnas centradas -->
            <div class="grid grid-cols-1 md:grid-cols-3 gap-12 max-w-5xl mx-auto">
                {directores.map((member) => (
                    <div>
                        <TeamCard 
                            name={member.name}
                            role={member.role}
                            image={member.image}
                            link={`/nosotros/equipo/${member.slug}`}
                        />
                    </div>
                ))}
            </div>

            <!-- Enlace a equipo completo -->
            <div class="text-center mt-16">
                <a href="/nosotros/equipo" class="inline-block bg-primary text-white font-bold py-3 px-8 rounded-lg hover:bg-primary-dark transition-colors">
                    Ver Equipo Completo
                </a>
            </div>
        </div>
    </section>

</Layout>

<script>
    import { gsap } from "gsap";

    // Las animaciones de GSAP siguen funcionando perfectamente
    gsap.from("#hero-title", { opacity: 0, y: 50, duration: 1, ease: "power3.out" });
    gsap.from("#hero-subtitle", { opacity: 0, y: 50, duration: 1, delay: 0.3, ease: "power3.out" });
    gsap.from("#hero-button", { opacity: 0, y: 50, duration: 1, delay: 0.5, ease: "power3.out" });
    gsap.from("#hero-image", { opacity: 0, scale: 0.9, duration: 1.2, delay: 0.2, ease: "power3.out" });
</script>