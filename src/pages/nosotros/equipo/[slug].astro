<Layout title={`${member.name} - CCD`}>
    
    <!-- ============================================ -->
    <!-- 1. HEADER HERO (REDIMENSIONADO)              -->
    <!-- ============================================ -->
    <!-- Fondo: Gradiente suave de blanco a celeste CCD -->
    <header class="bg-gradient-to-b from-white via-[#EAF4FF] to-[#EAF4FF] pt-10 pb-0 relative overflow-hidden">
        <div class="container mx-auto px-6 grid grid-cols-1 lg:grid-cols-12 gap-12 items-end">
            
            <!-- COLUMNA TEXTO (Ocupa 7 de 12 columnas para ser más ancho) -->
            <div class="lg:col-span-7 pb-20 lg:pb-32">
                
                <!-- Nombre: Grande y Bold -->
                <h1 class="font-serif text-5xl md:text-6xl font-black text-gray-900 mb-4 leading-tight">
                    {member.name}
                </h1>
                
                <!-- Cargo: Rojo, Serif y Tamaño mediano (Como en el diseño) -->
                <h2 class="font-serif text-2xl md:text-3xl text-primary font-bold mb-10">
                    {member.role}
                </h2>
                
                <!-- Descripción: Texto grande y con MUCHO interlineado (leading-loose) -->
                <p class="font-sans text-lg md:text-xl text-gray-800 leading-[1.8] md:leading-[1.8] font-normal">
    {member.intro}
</p>
            </div>

            <!-- COLUMNA IMAGEN (Ocupa 5 de 12 columnas) -->
            <div class="lg:col-span-5 flex justify-center lg:justify-end relative z-10 -mb-0">
                <!-- 
                    Imagen Grande:
                    - max-h-[650px]: Permite que la imagen sea alta.
                    - object-bottom: Se alinea a la base.
                    - drop-shadow-2xl: Sombra suave para separarla del fondo.
                -->
                <img 
                    src={member.image} 
                    alt={member.name} 
                    class="w-full h-auto max-h-[500px] lg:max-h-[600px] object-contain object-bottom drop-shadow-2xl"
                />
            </div>
        </div>
    </header>

    <!-- ============================================ -->
    <!-- 2. CONTENIDO PRINCIPAL                       -->
    <!-- ============================================ -->
    <section class="bg-white py-16 md:py-24">
        <div class="container mx-auto px-6">
            <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-24">
                
                <!-- COLUMNA IZQUIERDA: DETALLES (8/12) -->
                <div class="lg:col-span-8 space-y-16">
                    
                    <!-- Acerca de -->
                    <div class="prose prose-lg text-gray-700 max-w-none">
                        <h3 class="font-serif text-3xl font-bold text-primary mb-6">Acerca de {member.name.split(' ')[0]}</h3>
                        <p class="font-sans text-lg md:text-xl text-gray-800 leading-[1.8] md:leading-[1.8] font-normal">{member.about}</p>
                    </div>

                    <!-- Experiencia -->
                    <div>
                        <h3 class="font-serif text-3xl font-bold text-primary mb-6">Experiencia</h3>
                        <div class="space-y-6">
                            {member.experience.map((paragraph) => (
                                <div class="flex items-start">

                                    <p class="font-sans text-lg md:text-xl text-gray-800 leading-[1.8] md:leading-[1.8] font-normal">{paragraph}</p>
                                </div>
                            ))}
                        </div>
                    </div>

<!-- SECCIÓN EDUCACIÓN (Formato Astro) -->
<div>
    <h3 class="font-serif text-3xl font-bold text-primary mb-6">Educación</h3>
    <div class="grid gap-6">
        {member.education.map((item) => (
            <div class="bg-gray-50 p-6 rounded-lg border-l-4 border-primary hover:shadow-md transition-shadow flex flex-col sm:flex-row items-center justify-between gap-6">
                
                {/* --- TEXTO --- */}
                <div class="flex-1 w-full sm:w-auto text-left">
                    <h4 class="font-bold text-gray-900 text-xl leading-tight mb-2">{item.degree}</h4>
                    
                    <div class="text-gray-600 text-lg">
                        {/* Lógica: Si es Array (lista), mapeamos. Si es texto, mostramos directo */}
                        {Array.isArray(item.institution) ? (
                            item.institution.map((instName) => (
                                <div class="block mb-1">
                                    {instName}
                                </div>
                            ))
                        ) : (
                            <span>{item.institution}</span>
                        )}
                    </div>
                </div>

                {/* --- LOGOS (Grandes y Horizontales) --- */}
                {item.logos && item.logos.length > 0 && (
                    <div class="flex flex-row items-center justify-center gap-4 mt-4 sm:mt-0 flex-shrink-0">
                        {item.logos.map((logoUrl) => (
                            <img 
                                src={logoUrl} 
                                alt="Logo Institución" 
                                class="h-20 md:h-28 w-auto object-contain mix-blend-multiply"
                            />
                        ))}
                    </div>
                )}
            </div>
        ))}
    </div>
</div>
                </div>

                <!-- COLUMNA DERECHA: SIDEBAR (4/12) -->
                <aside class="lg:col-span-4 space-y-12">
                    
                    <!-- Capacidades -->
                    <div>
                        <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-2 border-b border-gray-200">
                            Capacidades
                        </h3>
                        <div class="space-y-4">
                            {member.highlightedCapabilities.map((capId) => {
  const cap = ALL_CAPABILITIES_DATA[capId as keyof typeof ALL_CAPABILITIES_DATA];
  if (!cap) return null; 
  return (
    <SidebarCard 
      title={cap.name} 
      image={cap.image} 
      link={`/capacidades/${capId}`} 
    />
  );
})}
                        </div>
                    </div>

                    <!-- Industrias -->
                    <div>
                        <h3 class="font-serif text-2xl font-bold text-primary mb-6 pb-2 border-b border-gray-200">
                            Industrias
                        </h3>
                        <div class="space-y-4">
                            {member.highlightedIndustries.map((indId) => {
  const ind = ALL_INDUSTRIES_DATA[indId as keyof typeof ALL_INDUSTRIES_DATA];
  if (!ind) return null; 
  return (
    <SidebarCard 
      title={ind.name} 
      image={ind.image} 
      link={`/industrias/${indId}`} 
    />
  );
})}
                        </div>
                    </div>

                </aside>

            </div>
        </div>
    </section>

