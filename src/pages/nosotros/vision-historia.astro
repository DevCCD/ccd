        // Animación de fade-in para elementos - más rápida y sutil
        const fadeElements = document.querySelectorAll(".fade-in-element");
        fadeElements.forEach((element) => {
            gsap.from(element, {
                scrollTrigger: {
                    trigger: element,
                    start: "top 90%", // Aparece antes (era 85%)
                    toggleActions: "play none none none",
                },
                opacity: 0,
                y: 20, // Movimiento más sutil (era 30)
                duration: 0.5, // Más rápido (era 0.8)
                ease: "power2.out",
            });
        });

        // Animación de iconos - más rápida y sin delay
        const icons = document.querySelectorAll(".icon-container");
        icons.forEach((icon) => {
            gsap.from(icon, {
                scrollTrigger: {
                    trigger: icon,
                    start: "top 85%", // Aparece antes (era 80%)
                    toggleActions: "play none none none",
                },
                scale: 0.8, // Escala inicial más cercana (era 0)
                opacity: 0,
                duration: 0.4, // Más rápido (era 0.6)
                ease: "power2.out", // Ease más suave (era back.out)
            });
        });
