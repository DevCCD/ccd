<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";

    gsap.registerPlugin(ScrollTrigger);

    // Animación de la línea
    gsap.to("#line-progress", {
        height: "100%",
        ease: "none",
        scrollTrigger: {
            trigger: ".timeline-block",
            start: "top center",
            end: "bottom center",
            scrub: 0.5,
        }
    });

    // Animación de aparición
    const blocks = document.querySelectorAll('.timeline-block');
    
    blocks.forEach((block) => {
        const elements = block.querySelectorAll('.fade-in-element, .rounded-full');
        gsap.from(elements, {
            y: 40,
            opacity: 0,
            duration: 1,
            stagger: 0.1,
            ease: "power3.out",
            scrollTrigger: {
                trigger: block,
                start: "top 85%",
                toggleActions: "play none none reverse"
            }
        });
    });
</script>